<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dhcc.health">


    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name="com.dhcc.health.NApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_health"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        tools:replace="android:label"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:theme="@style/AppTheme"
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|locale|layoutDirection"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <!--  Action中定义的MainActivity  -->
                <action android:name="com.dhcc.health.main" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--    通用启动页    -->
        <activity
            android:name="com.dhcc.res.SplashActivity"
            android:theme="@style/SplashAppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 登陆页 -->
        <activity
            android:name="com.dhcc.module.health.login.LoginActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <!--  Action中定义的LoginActivity  -->
                <action android:name="com.dhcc.health.login" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.base.commlibs.UniversalActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|locale|layoutDirection"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Slide"
            android:windowSoftInputMode="adjustPan"/>

        <service
            android:name="com.base.commlibs.service.MyService"
            android:label="newOrdService"/>
        <service
            android:name="com.base.commlibs.service.MServiceNewOrd"
            android:label="newOrdService"/>

    </application>


</manifest>