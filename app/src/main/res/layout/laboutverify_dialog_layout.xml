<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="护工工号"
            android:textColor="#9B9B9B" />

        <EditText
            android:id="@+id/ed_popup_hgusercode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#F5FAFF"
            android:gravity="center"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            tools:text="hg01"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="护工密码"
            android:textColor="#9B9B9B" />

        <EditText
            android:id="@+id/ed_popup_hgpw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#F5FAFF"
            android:gravity="center"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:inputType="textPassword"
            tools:text="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_popup_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_sure"
                android:gravity="center"
                android:paddingStart="@dimen/dp_36"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_36"
                android:paddingBottom="@dimen/dp_8"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_popup_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_cancel"
                android:paddingStart="@dimen/dp_36"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_36"
                android:paddingBottom="@dimen/dp_8"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>