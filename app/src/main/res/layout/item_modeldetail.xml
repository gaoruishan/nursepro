<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/swipe_labout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentView="@+id/messagecontentll"
        app:rightMenuView="@+id/messagerightmenu">
    <LinearLayout
        android:id="@+id/messagecontentll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_labout_num"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:background="#FFF5A623">

            <TextView
                android:id="@+id/tv_labout_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="198"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="管  "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical"

            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_labout_no"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="201709160737571370"
                android:textColor="#FF4A4A4A"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_labout_patname"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="刘思薇"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_16"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_labout_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="07:37:57"
                android:textColor="#FF4A4A4A"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_labout_statu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="已发送"
                android:textColor="#FF4A4A4A"
                android:textSize="13sp"/>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/messagerightmenu"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@android:color/holo_red_light">

            <TextView
                android:id="@+id/tv_lapack_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="14sp"
                android:text="删除"/>

        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF6F6F6"></View>

</LinearLayout>