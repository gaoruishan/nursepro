<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_15"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.noober.background.view.BLLinearLayout
        android:id="@+id/ll_type_1"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_solid_color="@color/blue_dark2"
        android:layout_width="@dimen/dp_150"
        android:minWidth="@dimen/dp_80"
        android:gravity="center"
        app:bl_stroke_color="@color/blue"
        app:bl_stroke_width="@dimen/dp_2"
        android:padding="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_height="@dimen/dp_120">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bed"
                tools:text="02床"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                tools:text="上扣扣"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:layout_weight="1"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_regno"
            tools:text="住院号:0000000001"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_num_1"
            tools:text="数量: 001"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.noober.background.view.BLLinearLayout>

    <com.noober.background.view.BLLinearLayout
        app:bl_corners_radius="@dimen/dp_5"
        android:id="@+id/ll_type_2"
        app:bl_solid_color="@color/blue_dark2"
        android:layout_width="@dimen/dp_150"
        android:minWidth="@dimen/dp_80"
        android:gravity="center"
        app:bl_stroke_color="@color/blue"
        app:bl_stroke_width="@dimen/dp_2"
        android:padding="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_height="@dimen/dp_120">

        <TextView
            android:id="@+id/tv_type"
            tools:text="类别: 停止需处理"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/dp_17"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_num_2"
            tools:text="数量: 001"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.noober.background.view.BLLinearLayout>
</LinearLayout>