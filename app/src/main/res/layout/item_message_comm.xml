<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_message_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_message_regno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="1002003004"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/sp_13"
            tools:text="01床"/>

        <TextView
            android:id="@+id/tv_overtime_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center|end"
            android:layout_weight="1"
            android:text="已超时"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/lab_warning_red">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_15"
>

        <TextView
            android:id="@+id/tv_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_8"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/sp_16"
            tools:text="马亭"/>

        <ImageView
            android:id="@+id/img_message_sex"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_8"
            android:src="@drawable/sex_male"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:textSize="@dimen/sp_18"
            android:visibility="gone"
            tools:text="普通外科一"/>
        <LinearLayout
            android:id="@+id/ll_overtime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginRight="@dimen/dp_5">
            <TextView
                android:id="@+id/tv_needtime"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:text="需执行时间："
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="输液倒计时："
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_13"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="5 "
                android:textColor="#FFFF6EA4"
                android:textSize="@dimen/sp_20"
                android:visibility="gone"
            />
            <com.dhcc.nursepro.view.CountView
                android:id="@+id/cv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_state_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="min"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_13"
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
