<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_itemrlreg_patorders"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_2"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_4">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_itemrlreg_patorderschild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_itemrlreg_orderdatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:textSize="@dimen/sp_12"
            tools:text="2018-08-25 08:00" />

        <TextView
            android:id="@+id/tv_itemrlreg_orderoperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="皮试" />

        <TextView
            android:id="@+id/tv_itemrlreg_orderfrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            tools:text="QD" />

        <TextView
            android:id="@+id/tv_itemrlreg_ordercreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            tools:text="严医生" />

        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_itemrlreg_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010101"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            tools:text="余液：20ml" />
    </LinearLayout>

    <View
        android:id="@+id/line_itemrlreg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/line_dash"
        android:layout_marginTop="@dimen/dp_4"
        android:layerType="software" />


</LinearLayout>