<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_itemrlreg_patorders"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="4dp">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_itemrlreg_patorderschild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_itemrlreg_orderdatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textSize="12sp"
            tools:text="2018-08-25 08:00" />

        <TextView
            android:id="@+id/tv_itemrlreg_orderoperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="皮试" />

        <TextView
            android:id="@+id/tv_itemrlreg_orderfrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="QD" />

        <TextView
            android:id="@+id/tv_itemrlreg_ordercreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="严医生" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_itemrlreg_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#010101"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="余液：20ml" />
    </LinearLayout>

    <View
        android:id="@+id/line_itemrlreg"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line_dash"
        android:layout_marginTop="4dp"
        android:layerType="software" />


</LinearLayout>