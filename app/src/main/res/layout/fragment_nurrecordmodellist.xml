<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".workarea.nurrecord.NurRecordModellistFragmen">

    <RelativeLayout
        android:id="@+id/rl_modellist_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_modellist_warning"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_55"
            android:layout_centerInParent="true"
            android:background="#FFF5FAFF"
            android:gravity="center"
            android:text="请您使用扫码设备，扫描病人腕带"
            android:textColor="#FF9B9B9B"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_modellist_warningtitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_above="@+id/tv_modellist_warning"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="请扫描腕带"
            android:textColor="#FF62ABFF"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_91"
            android:layout_above="@+id/tv_modellist_warningtitle"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/icon_patient_scan" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_modellist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
