<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_order_priority"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_18"
        android:background="@drawable/bg_priority_long"
        android:gravity="center"
        android:layout_margin="@dimen/dp_12"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        tools:text="长期" />

    <View
        android:id="@+id/view_docorders_namedev"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/line_dash"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layerType="software" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5">




        <TextView
            android:id="@+id/tv_item_order_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"/>
        <TextView
            android:id="@+id/tv_item_order_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="停止时间"/>
        <TextView
            android:id="@+id/tv_item_order_ordphcin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="用法"/>
        <TextView
            android:id="@+id/tv_item_order_orddose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="用量"/>
        <TextView
            android:id="@+id/tv_item_order_orddoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="医生"/>
    </LinearLayout>
    <View
        android:id="@+id/line_ospat_orderinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@drawable/line_dash"
        android:layout_marginTop="@dimen/dp_10"
        android:layerType="software" />
</LinearLayout>