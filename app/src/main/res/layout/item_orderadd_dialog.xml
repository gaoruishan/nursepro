<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.noober.background.view.BLTextView
            android:id="@+id/tv_status"
            tools:text="停止"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            app:bl_corners_radius="@dimen/dp_5"
            app:bl_solid_color="@color/blue_dark"
            android:textSize="@dimen/sp_12"
            android:paddingRight="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_popup_childorderinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:textColor="#4A4A4A"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="0.9%氯化钠注射液T(100ml*塑瓶)" />

        <TextView
            android:id="@+id/tv_popup_childorderunit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            android:textStyle="bold"
            tools:text="100ml" />
    </LinearLayout>

    <com.nex3z.flowlayout.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        app:flChildSpacing="@dimen/dp_6">

        <TextView
            android:id="@+id/tv_sttdatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            tools:text="2019-10-10 08:00" />

        <TextView
            android:id="@+id/tv_doc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            tools:text="医生1" />

        <TextView
            android:id="@+id/tv_labdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            tools:text="血清" />

        <TextView
            android:id="@+id/tv_tubecolordesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            tools:text="紫帽红管" />
    </com.nex3z.flowlayout.FlowLayout>

    <TextView
        android:id="@+id/tv_labnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="#4A4A4A"
        tools:text="备注信息" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@color/blue" />
</LinearLayout>
    

