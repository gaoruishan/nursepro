<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_40"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_56"
        android:paddingStart="@dimen/dp_56"
        android:paddingTop="@dimen/dp_40">
        <ImageView
            android:id="@+id/img_popup_orderexecresult"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:src="@drawable/icon_popup_sucess" />

        <TextView
            android:id="@+id/tv_popup_orderexecresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="手动执行成功"
            android:textColor="#4a4a4a"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_order_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_popup_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/bg_dialog_sure"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_46"
            android:paddingStart="@dimen/dp_46"
            android:paddingTop="@dimen/dp_10"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
        <TextView
            android:id="@+id/tv_popup_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/bg_dialog_cancel"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_46"
            android:paddingStart="@dimen/dp_46"
            android:paddingTop="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>



</LinearLayout>