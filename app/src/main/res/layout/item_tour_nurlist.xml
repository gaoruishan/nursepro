<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tournurlist_bedcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="101床"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_tourall_nurse1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:text="一级护理"
                android:textColor="@color/black"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_tournurlist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="zhangwei"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/img_tour_sex"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/sex_male"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF6F6F6"></View>



        <LinearLayout
            android:id="@+id/messagecontentl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_tourall_type2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="最近巡视"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_tournurlist_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2019-10-02"
                android:textColor="#FF4A4A4A"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_tournurlist_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="07:37:57"
                android:textColor="#FF4A4A4A"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/tv_tourall_nurse2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="hs01"
                android:textColor="#FF4A4A4A"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:textSize="13sp"/>
            <RelativeLayout
                android:id="@+id/rl_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/tv_tournurlist_img"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:paddingEnd="8dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_tourlist_selector"/>
            </RelativeLayout>

        </LinearLayout>
    <View
        android:id="@+id/view_tour_nurlist"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFF6F6F6"></View>

    <LinearLayout
        android:id="@+id/ll_tournurlist_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <com.nex3z.flowlayout.FlowLayout
             android:id="@+id/fl_modeldetail"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:flChildSpacing="5dp"
             app:flRowSpacing="8dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#FFF6F6F6"></View>
</LinearLayout>