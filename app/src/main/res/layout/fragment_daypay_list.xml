<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".workarea.bedmap.DayPayListFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/blue_light"/>
    <LinearLayout
        android:id="@+id/ll_patinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_patname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123123"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_locdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123123"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_chooseday"
        android:layout_below="@+id/ll_patinfo"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/blue_dark2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/blue_light"/>
        <LinearLayout
            android:id="@+id/ll_pay_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入院日期："
                    android:textColor="#ff4a4a4a"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_inhostime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2019-01-20  09:26"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#ECECEC"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预交费："
                    android:textColor="#ff4a4a4a"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_prepay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2019-01-20  09:26"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#ECECEC"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="费用："
                    android:textColor="#ff4a4a4a"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_payed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2019-01-20  09:26"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="#ECECEC"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额："
                    android:textColor="#ff4a4a4a"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2019-01-20  09:26"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    android:layout_marginRight="@dimen/dp_10"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#fff5faff"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_daypay_typelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_chooseday"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="#ff4a4a4a"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_choosepaydate"
            android:layout_width="@dimen/dp_90"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="2019-10-11"
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical|right"
            />
        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/daypay_time_select"
            />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="当前总计："
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:id="@+id/tv_infee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="1234567.99"
            android:gravity="left|center_vertical"
            android:textColor="#FF6262"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_5"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_paylist_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_blood_search_empty"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#9B9B9B"
            android:text="该患者今日清单为空"/>
    </LinearLayout>

</RelativeLayout>