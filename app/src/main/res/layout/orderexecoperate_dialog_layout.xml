<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_50"
    android:layout_marginBottom="@dimen/dp_50"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_30">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/scrollbar_ver_thumb">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="患者信息"
                    android:textColor="#9B9B9B" />

                <TextView
                    android:id="@+id/tv_popup_patinfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#F5FAFF"
                    android:gravity="center"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    tools:text="06床-苏患者-男-62岁-02791538" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="医嘱信息"
                    android:textColor="#9B9B9B" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="#F5FAFF"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_16">
                        <TextView
                            android:id="@+id/tv_popup_orderinfo"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"
                            tools:text="0.9%氯化钠注射液T(100ml*塑瓶)" />

                        <TextView
                            android:id="@+id/tv_popup_orderunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"
                            tools:text="100ml" />

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recy_popup_childOrderInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/tv_popup_orderinfoex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:gravity="center"
                        android:textColor="#9B9B9B"
                        android:textSize="@dimen/sp_13"
                        tools:text="2015-10-20  08:00  静脉滴注  40mg  严医生\n配液  护士01  2019-8-16 09:50:46\n核查  护士02  2019-8-16 09:51:09" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_remainingliquid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="余液量"
                        android:textColor="#9B9B9B" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="#F5FAFF"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_popup_remainingliquid"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp_45"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"
                            tools:text="111" />

                        <TextView
                            android:layout_width="@dimen/dp_56"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/sp_16"
                            android:text="ml"/>
                    </LinearLayout>





                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_remarkinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="备注信息"
                        android:textColor="#9B9B9B" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="#F5FAFF"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_popup_remarkinfo"
                            android:layout_width="@dimen/dp_0"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp_45"
                            android:gravity="center"
                            android:textColor="#4A4A4A"
                            android:textSize="@dimen/sp_15"
                            android:textStyle="bold"
                            tools:text="111" />

                        <ImageView
                            android:id="@+id/img_remarkinfo_drop"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="match_parent"
                            android:paddingStart="@dimen/dp_8"
                            android:paddingEnd="@dimen/dp_8"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_drop"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_popup_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dialog_sure"
                        android:gravity="center"
                        android:paddingStart="@dimen/dp_36"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_36"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_popup_ordercancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dialog_cancel"
                        android:paddingStart="@dimen/dp_36"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_36"
                        android:paddingBottom="@dimen/dp_8"
                        android:text="取消"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>