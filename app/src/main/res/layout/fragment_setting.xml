<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5FAFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="20dp" 
            android:src="@drawable/icon_nurse"/>
        <TextView
            android:id="@+id/tv_setting_username"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="王医生"
            android:textColor="@color/text_view_text_color"
            android:textStyle="bold"
            android:textSize="17sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/tv_setting_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view_text_color"
                android:textSize="13sp"
                android:text="选择科室"
                />
            <View
                android:id="@+id/img_setting_point"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/point_circle"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rl_setting_choosedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医嘱查询时间"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"
                android:textColor="@color/text_view_text_color"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/setting_arrow">

            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/patevents_device_color"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            ></View>

        <RelativeLayout
            android:id="@+id/rl_setting_choosebeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="所管床设置"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"
                android:textColor="@color/text_view_text_color"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/setting_arrow">

            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/patevents_device_color"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            ></View>

        <RelativeLayout
            android:id="@+id/rl_setting_chooseway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="提醒方式"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textColor="@color/text_view_text_color"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/setting_arrow">

            </ImageView>
        </RelativeLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_setting_relogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="     注销     "
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>
