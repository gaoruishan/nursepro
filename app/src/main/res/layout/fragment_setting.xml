<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FAFF"
    android:orientation="vertical"
    tools:context=".setting.SettingFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"/>
        <TextView
            android:visibility="invisible"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_setting_aboutus"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:text="版本说明"/>

    </LinearLayout>


    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/workarea_device_color" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_85"
                    android:layout_height="@dimen/dp_85"
                    android:layout_margin="@dimen/dp_20"
                    android:src="@drawable/icon_nurse" />

                <TextView
                    android:id="@+id/tv_setting_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_24"
                    android:gravity="center"
                    android:textColor="@color/text_view_text_color"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    tools:text="护士" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_setting_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择科室"
                        android:textColor="@color/text_view_text_color"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:id="@+id/img_setting_point"
                        android:layout_width="@dimen/dp_7"
                        android:layout_height="@dimen/dp_7"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="@drawable/point_circle" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:id="@+id/rl_setting_choosedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="医嘱查询时间"
                    android:textColor="@color/text_view_text_color"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/setting_arrow">

                </ImageView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#ECECEC" />

            <RelativeLayout
                android:background="@color/white"
                android:id="@+id/rl_setting_choosebeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="所管床设置"
                    android:textColor="@color/text_view_text_color"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/setting_arrow">

                </ImageView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#ECECEC" />

            <RelativeLayout
                android:background="@color/white"
                android:id="@+id/rl_setting_chooseway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="消息提醒设置"
                    android:textColor="@color/text_view_text_color"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/setting_arrow">

                </ImageView>
            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#ECECEC" />
            <RelativeLayout
                android:visibility="gone"
                android:background="@color/white"
                android:id="@+id/rl_setting_failrequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="失败请求"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_view_text_color"
                    />
                <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/setting_arrow">

                </ImageView>
            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#ECECEC" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_setting_relogin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="     退出登录     "
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
