<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal"
        android:background="@color/blue_dark2"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/black"
            tools:text="护士01"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/black"
            android:text="数量："
            ></TextView>
        <TextView
            android:id="@+id/note_count"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/dp_15"
            tools:text="4条"></TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#8FD3F4" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#ECF4FC" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_90"></android.support.v7.widget.RecyclerView>
</LinearLayout>
