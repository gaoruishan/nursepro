<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_drporderinfo_orderstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_drporderinfo_orderprepare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_oval_green"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="1dp"
            android:textColor="@color/white"
            tools:text="未配液" />

        <TextView
            android:id="@+id/tv_drporderinfo_orderverify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_oval_green"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="1dp"
            android:textColor="@color/white"
            tools:text="未复核" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_drporderinfo_ordername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/ordersearch_text_color"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="阿德福韦片T(10mg*14片)" />

    <LinearLayout
        android:id="@+id/ll_drporderinfo_singleorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_drporderinfo_orderdatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="2018-08-25 08:00" />

        <TextView
            android:id="@+id/tv_drporderinfo_orderoperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="皮试" />

        <TextView
            android:id="@+id/tv_drporderinfo_orderdose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="10mg" />

        <TextView
            android:id="@+id/tv_drporderinfo_orderfrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="QD" />

        <TextView
            android:id="@+id/tv_drporderinfo_ordercreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="严医生" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_drporderinfo_multiorder1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_drporderinfo_orderdose1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="10mg" />


    </LinearLayout>

    <View
        android:id="@+id/line_drporderinfo_multiorder"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/line_dash"
        android:layerType="software"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_drporderinfo_multiorder2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_drporderinfo_orderdatetime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="2018-08-25 08:00" />

        <TextView
            android:id="@+id/tv_drporderinfo_orderoperate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="皮试" />

        <TextView
            android:id="@+id/tv_drporderinfo_orderfrequency2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="QD" />

        <TextView
            android:id="@+id/tv_drporderinfo_ordercreator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="12sp"
            tools:text="严医生" />


    </LinearLayout>


</LinearLayout>