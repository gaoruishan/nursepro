<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentView="@+id/ll_message_content"
    app:rightMenuView="@+id/ll_message_rightmenu">

    <LinearLayout
        android:id="@+id/ll_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:background="@color/blue_light"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_req_patinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_5"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15"
                tools:text="01床" />
            <TextView
                android:id="@+id/tv_req_orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="id"
                android:textSize="@dimen/sp_11"
                />
            <TextView
                android:id="@+id/tv_req_starttime"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:textSize="@dimen/sp_12"
                tools:text="01床" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_2"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_req_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"
                tools:text="葡萄糖" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_2"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:textSize="@dimen/sp_13"
                android:text="失败原因:"/>
            <TextView
                android:id="@+id/tv_req_failreason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:textSize="@dimen/sp_13"
                tools:text="failreason" />
            <TextView
                android:id="@+id/tv_req_failtime"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                tools:text="201-2"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_message_rightmenu"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@android:color/holo_red_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:text="删除"/>

    </LinearLayout>

</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
