<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_blue_light"
    tools:context=".workarea.operation.OperationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icon_time_bottom"/>

        <TextView
            android:id="@+id/tv_orderexecute_startdatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orderexecute_text_color"
            android:textSize="12sp"
            tools:text="2018-08-23 10:00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:text="至"
            android:textColor="#62abff"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_orderexecute_enddatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orderexecute_text_color"
            android:textSize="12sp"
            tools:text="2018-08-23 10:00"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/timepicker_line"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        ></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/ll_operation_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_blood_search_empty"/>

        <TextView
            android:id="@+id/tv_operation_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#9B9B9B"
            android:text="暂无手术信息"/>
    </LinearLayout>
</LinearLayout>
