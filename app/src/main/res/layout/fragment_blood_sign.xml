<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".workarea.bloodtransfusionsystem.bloodsign.BloodSignFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E4F0FF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_90"
                android:src="@drawable/icon_patient_scan" />

            <TextView
                android:id="@+id/tv_bloodscantip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:textColor="#FF62ABFF"
                android:textSize="@dimen/sp_18"
                tools:text="请扫描血袋条码" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#f5faff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_18"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_23"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_bloodbag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_bloodbag_selector" />

                <View
                    android:id="@+id/line_blood_1"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_55"
                    android:background="@drawable/line_bloodts_scan_selector"
                    android:layerType="software" />

                <ImageView
                    android:id="@+id/img_bloodproduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_bloodproduct_selector" />

                <View
                    android:id="@+id/line_blood_2"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_55"
                    android:background="@drawable/line_bloodts_scan_selector"
                    android:layerType="software" />

                <ImageView
                    android:id="@+id/img_bloodpatient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_patient_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23"
                    android:gravity="center_vertical"
                    android:text="血袋信息"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_bloodsign_bloodbaginfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    tools:text="0010116157767" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23"
                    android:gravity="center_vertical"
                    android:text="血制品信息"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_bloodsign_bloodproductinfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    tools:text="Z4167V00-悬浮红细胞2.00U-A型Rh阳性" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_23"
                    android:gravity="center_vertical"
                    android:text="患者信息"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_bloodsign_bloodpatientinfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    tools:text="妇产科一病床-7床-刘患者-A型Rh阳性" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>