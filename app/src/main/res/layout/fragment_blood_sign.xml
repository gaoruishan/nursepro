<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".workarea.bloodtransfusionsystem.bloodsign.BloodSignFragment">

    <RelativeLayout
        android:id="@+id/rl_blood_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_blood_warning"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="#FFF5FAFF"
            android:gravity="center"
            android:text="请您使用扫码设备，\n扫描血袋号、血制品编号"
            android:textColor="#FF9B9B9B"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_blood_warningtitle"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_above="@+id/tv_blood_warning"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:text="请扫码"
            android:textColor="#FF62ABFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="91dp"
            android:layout_above="@+id/tv_blood_warningtitle"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/icon_patient_scan" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="47dp"
                android:src="@drawable/icon_patient_scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="请扫码"
                android:textColor="#FF62ABFF"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="受血人信息"
            android:textColor="#FF9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bloodsign_bloodpatientinfo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_blood_content_selector"
            android:gravity="center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="请扫描受血人腕带"
            android:textColor="@drawable/textcolor_blood_content_selector"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="血袋信息"
            android:textColor="#FF9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bloodsign_bloodbaginfo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_blood_content_selector"
            android:gravity="center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="请扫描血袋条码"
            android:textColor="@drawable/textcolor_blood_content_selector"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="血制品信息"
            android:textColor="#FF9B9B9B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_bloodsign_bloodproductinfo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_blood_content_selector"
            android:gravity="center_vertical"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="请扫描血制品条码"
            android:textColor="@drawable/textcolor_blood_content_selector"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bloodsign_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_dialog_sure"
            android:paddingBottom="10dp"
            android:paddingEnd="46dp"
            android:paddingStart="46dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>