<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5faff"
    android:orientation="vertical"
    tools:context=".workarea.bedmap.BedMapPatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_12"
        android:paddingStart="@dimen/dp_12"
        android:paddingTop="@dimen/dp_20">


        <TextView
            android:id="@+id/tv_bedmappat_bedno"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:background="@drawable/bg_bedmap_patient_bedno"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            tools:text="01床" />

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_bedmappat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    tools:text="刘患者" />

                <ImageView
                    android:id="@+id/img_bedmappat_sex"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:padding="@dimen/dp_4"
                    tools:src="@drawable/sex_male" />

                <com.dhcc.nursepro.view.CareLevelTextView
                    android:id="@+id/tv_bedmappat_carelevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bedmap_text_color"
                    tools:text="一级" />


            </LinearLayout>

                <com.dhcc.nursepro.view.PatIconView
                    android:id="@+id/paticon_patinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"></com.dhcc.nursepro.view.PatIconView>
            </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_bedmappat_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="基本信息"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_bedmappat_daypaylist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="住院日清单"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bedmappat_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="医嘱单"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/white"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ececec" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bedmappat_ordersearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="医嘱查询"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/white"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ececec" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bedmappat_orderexecute"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="医嘱执行"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bedmappat_testresult"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="检验结果"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/white"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ececec" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bedmappat_inspectionreport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="检查报告"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bedmappat_eventsearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16">

                <TextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="事件登记"
                    android:textColor="#4a4a4a"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/right" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>