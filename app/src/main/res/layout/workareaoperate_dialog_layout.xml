<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="@dimen/dp_50"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="@dimen/dp_50"
    android:background="@drawable/bg_dialog"
    android:paddingBottom="30dp">

    <ImageView
        android:id="@+id/img_cancle"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:src="@drawable/dialog_cancle"
        android:paddingStart="20dp"
        android:paddingBottom="5dp"
        android:layout_alignParentEnd="true"></ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbarThumbVertical="@drawable/scrollbar_ver_thumb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="#F5FAFF"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="患者信息"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#9B9B9B" />

                    <TextView
                        android:id="@+id/tv_popup_patinfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="#4A4A4A"
                        android:textSize="15sp"
                        tools:text="06床-苏患者-男-62岁-02791538" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#F5FAFF"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:textSize="@dimen/sp_12"
                            android:text="医嘱信息"
                            android:textColor="#9B9B9B" />
                        <TextView
                            android:id="@+id/tv_jp"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:gravity="right"
                            android:textSize="@dimen/sp_12"
                            android:text="静配"
                            android:layout_marginRight="@dimen/dp_15"
                            android:textColor="@color/blue" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_popup_orderinfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:text="0.9%氯化钠注射液T(100ml*塑瓶)" />

                        <TextView
                            android:id="@+id/tv_popup_orderunit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:text="100ml" />

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recy_popup_childOrderInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/tv_popup_orderinfoex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:textColor="#9B9B9B"
                        android:textSize="13sp"
                        tools:text="2015-10-20  08:00  静脉滴注  40mg  严医生\n配液  护士01  2019-8-16 09:50:46\n核查  护士02  2019-8-16 09:51:09" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_remainingliquid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="#F5FAFF"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余液量"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#9B9B9B" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5FAFF"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/ed_popup_remainingliquid"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"
                            android:hint="请输入"/>

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="ml"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_speed"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="#F5FAFF"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="滴速"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#9B9B9B" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5FAFF"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_speed"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"
                            android:hint="请输入" />

                        <Spinner
                            android:id="@+id/sp_speedunit"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mainorder_speed_select"
                            android:gravity="center"
                            android:paddingStart="@dimen/dp_5"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_remarkinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5FAFF"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_5"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="备注"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#9B9B9B" />

                        <EditText
                            android:id="@+id/ed_popup_remarkinfo"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="#4A4A4A"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:textSize="15sp"
                            android:hint="请输入"  />
                        <Spinner
                            android:id="@+id/sp_reason"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_mainorder_speed_select"
                            android:gravity="center"
                            android:paddingStart="@dimen/dp_5"
                            />

                        <ImageView
                            android:id="@+id/img_remarkinfo_drop"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:src="@drawable/icon_drop"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_popup_sure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_dialog_sure"
                        android:gravity="center"
                        android:paddingStart="36dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="36dp"
                        android:paddingBottom="8dp"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="17sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_popup_ordercancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_mainord_cancle"
                        android:paddingStart="36dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="36dp"
                        android:paddingBottom="8dp"
                        android:text="取消"
                        android:textColor="@color/blue_dark"
                        android:textSize="17sp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>