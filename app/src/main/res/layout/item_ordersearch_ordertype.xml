<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_ordersearch_ordertype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ordertype_selector">

        <View
            android:id="@+id/view_ordersearch_ordertype"
            android:layout_width="@dimen/dp_5"
            android:layout_height="match_parent"
            android:background="#FF70AAF2" />

        <TextView
            android:id="@+id/tv_ordersearch_ordertype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:textColor="@color/black"
            tools:text="全部" />
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/dp_3"
            android:layout_height="wrap_content"
            android:textColor="@color/lab_warning_red"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/bg_labout_tv3"
            android:paddingRight="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_2"
            android:text="55"></TextView>
    </LinearLayout>

</LinearLayout>
    

