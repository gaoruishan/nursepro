<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_61"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_detail_code"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:textSize="@dimen/sp_14"
            tools:text="序号"
            android:textColor="@color/vitalsign_detail_tvcolor"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_detail_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:textSize="@dimen/sp_14"
                tools:text="2018-09-22"
                android:textColor="@color/vitalsign_detail_tvcolor"
                android:gravity="center" />
            <TextView
                android:id="@+id/tv_detail_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:textSize="@dimen/sp_14"
                tools:text="08:33"
                android:textColor="@color/lab_un_report"
                android:gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_vital_datalist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/patevents_device_color"/>
</LinearLayout>