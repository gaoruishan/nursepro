<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_osporderinfo_ordername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_5"
                tools:text="阿德福韦片T(10mg*14片)" />
            <ImageView
                android:id="@+id/img_osporderinfo_order"
                android:visibility="gone"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:padding="1dp"
                android:background="#62abff"
                android:scaleType="fitXY"
                android:src="@drawable/tube"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="剂量："
            android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/tv_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_12"
                android:text="总量：" />

            <TextView
                android:id="@+id/tv_allunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <View
            android:id="@+id/line_osporderinfo_multiorder"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/line_dash"
            android:layerType="software"/>

    </LinearLayout>

</FrameLayout>