<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_320"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_30">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束喂奶"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/blue_dark"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/blue_light"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="患者信息"
            android:textColor="#9B9B9B" />

        <TextView
            android:id="@+id/tv_popup_patinfo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#F5FAFF"
            android:gravity="center"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            tools:text="06床-苏患者-男-62岁-02791538" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="输入用奶量"
            android:textColor="#9B9B9B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5FAFF"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="母乳量"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="@dimen/dp_10">
                    <EditText
                        android:id="@+id/et_mom_milkamount"
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="@dimen/dp_55"
                        android:layout_centerInParent="true"
                        android:background="@color/bg_blue_light"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:hint="输入奶量"
                        android:inputType="number|numberDecimal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ml"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/sp_12"
                        android:layout_toRightOf="@+id/et_mom_milkamount"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配方奶"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="@dimen/dp_10">
                    <EditText
                        android:id="@+id/et_other_milkamount"
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="@dimen/dp_55"
                        android:layout_centerInParent="true"
                        android:background="@color/bg_blue_light"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:hint="输入奶量"
                        android:inputType="number|numberDecimal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ml"
                        android:textColor="#FF9B9B9B"
                        android:textSize="@dimen/sp_12"
                        android:layout_toRightOf="@+id/et_other_milkamount"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_popup_orderexec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_sure"
                android:gravity="center"
                android:paddingStart="@dimen/dp_36"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_36"
                android:paddingBottom="@dimen/dp_8"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_popup_ordercancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_dialog_cancel"
                android:paddingStart="@dimen/dp_36"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_36"
                android:paddingBottom="@dimen/dp_8"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>