<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/screen_bg_color"
    tools:context=".workarea.vitalsign.VitalSignFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_vitalsign_allarea"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全区"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_vitalsign_adminarea"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="管辖"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_vitalsign_nowoutarea"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今出区"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_vitalsign_alloutarea"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="全出区"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_vitalsign_waitarea"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="等待区"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#62AAFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_vitalsign_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            >

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_vitalsign_patient"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/white">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
