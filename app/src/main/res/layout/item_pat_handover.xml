<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:contentView="@+id/ll_item_pathandover_content"
    app:rightMenuView="@+id/ll_item_pathandover_rightmenu">

    <LinearLayout
        android:id="@+id/ll_item_pathandover_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_item_pathandover_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="手术交接" />

            <LinearLayout
                android:id="@+id/ll_item_pathandover_patinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6">

                <TextView
                    android:id="@+id/tv_item_pathandover_bedcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bed_text_color"
                    tools:text="01床" />

                <TextView
                    android:id="@+id/tv_item_pathandover_patname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:textColor="@color/bed_text_color"
                    tools:text="高小淳" />

                <TextView
                    android:id="@+id/tv_item_pathandover_regno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:textColor="@color/bed_text_color"
                    tools:text="0000000001" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_pathandover_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交接记录"
                    android:textColor="@color/bed_text_color" />

                <TextView
                    android:id="@+id/tv_item_pathandover_lastdatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_12"
                    android:textColor="@color/blue"
                    tools:text="2021-1-10 10:00" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_item_pathandover_lastuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    tools:text="NURSE/nurse" />

                <ImageView
                    android:id="@+id/img_item_pathandover_record"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_4"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:scaleType="center"
                    android:src="@drawable/icon_pathandover_recordlist_selector" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_pathandover_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/workarea_device_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_pathandover_rightmenu"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>