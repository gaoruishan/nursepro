<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_tourid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:text="巡视ID"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_infusiontour_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_1"
                android:gravity="center"
                android:text="巡视类型"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/tv_infusiontour_time"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="2019-10-10 10:00"
                android:textColor="@color/bottom_item_text_unselected_color"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_13"/>
        <TextView
            android:id="@+id/tv_infusiontour_nurse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="巡视人"
            android:textColor="@color/bottom_item_text_unselected_color"
            android:textSize="@dimen/sp_13"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="#FFF6F6F6"></View>

</LinearLayout>