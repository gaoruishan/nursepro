<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_window"
        android:layout_height="@dimen/dp_44"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="hs01"
            android:textStyle="bold" />
        <View
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/dhcc_point_circle"
            />

        <TextView
            android:id="@+id/tv_setting_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="选择科室选择科室选择科室选择科室"
            android:singleLine="true"
            android:maxWidth="@dimen/dp_200"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="@color/dhcc_text_view_text_color"
            android:textSize="@dimen/sp_13"
            />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="#62ABFF"/>

        <TextView
            android:id="@+id/tv_setting_window"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="选择窗口"
            android:textColor="@color/dhcc_text_view_text_color"
            android:textSize="@dimen/sp_13"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_63"
            android:background="#FFFFFFFF"
            android:gravity="center_vertical"
            android:visibility="gone"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="复核护士："
                android:textColor="#FF808080"
                android:textSize="@dimen/sp_15"
            />
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_33"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@color/blue_light"
                android:gravity="center_vertical"
            >
                <EditText
                    android:id="@+id/user_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:hint="请输入工号"
                    android:singleLine="true"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/sp_15"
                />
                <TextView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.3"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.9"
                    android:text=">"
                    android:textSize="@dimen/sp_30"/>
                <EditText
                    android:id="@+id/pass_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:hint="请输入密码"
                    android:singleLine="true"
                    android:textColor="#FF9B9B9B"
                    android:textSize="@dimen/sp_15"
                />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_pat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp_17"
                tools:text="患者1"
                />
            <ImageView
                android:id="@+id/img_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/dhcc_sex_female"/>
            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/sp_15"
                tools:text="年龄"
                />
            <TextView
                android:id="@+id/tv_bldTyp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/sp_15"
                tools:text="AB型"
                />
            <TextView
                android:id="@+id/tv_seat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="座号"
                />
            <TextView
                android:id="@+id/tv_regno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:gravity="right"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="登记号"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/white"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dosing"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#FF62ABFF"
                android:gravity="center"
                android:layout_weight="1"
                android:text="确定"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_16"
                />
            <TextView
                android:id="@+id/tv_ok_all"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#FF62ABFF"
                android:gravity="center"
                android:visibility="gone"
                android:text="自动配液"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_16"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/blue_light"/>

    <!--扫码-->
    <com.dhcc.res.infusion.CustomScanView
        android:id="@+id/custom_scan"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
    />
</RelativeLayout>