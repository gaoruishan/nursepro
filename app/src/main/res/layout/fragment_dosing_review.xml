<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".workarea.dosingreview.DosingReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46">

        <TextView
            android:id="@+id/tv_dosingreview_current"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="当前"
            android:textColor="@drawable/textcolor_dosingreview_selector" />

        <TextView
            android:id="@+id/tv_dosingreview_undosing"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未配液"
            android:textColor="@drawable/textcolor_dosingreview_selector" />

        <TextView
            android:id="@+id/tv_dosingreview_dosing"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已配液"
            android:textColor="@drawable/textcolor_dosingreview_selector" />

        <TextView
            android:id="@+id/tv_dosingreview_unreview"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未复核"
            android:textColor="@drawable/textcolor_dosingreview_selector" />

        <TextView
            android:id="@+id/tv_dosingreview_review"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已复核"
            android:textColor="@drawable/textcolor_dosingreview_selector" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#ECF4FC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginEnd="@dimen/dp_8"
            android:src="@drawable/icon_time_bottom"/>
        <TextView
            android:id="@+id/tv_dosingreview_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dosingreview_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="2018-08-01"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:textColor="#62abff"
            android:textSize="@dimen/sp_13"
            android:text="至"/>
        <TextView
            android:id="@+id/tv_dosingreview_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dosingreview_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="2018-09-01"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:background="#F6F6F6"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_dosingreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/ll_dosingreview_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/icon_blood_search_empty"/>

        <TextView
            android:id="@+id/tv_dosingreview_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="#9B9B9B"
            android:text="暂无医嘱"/>

    </LinearLayout>
</LinearLayout>