<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue"></View>
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/swipe_tourall_type1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentView="@+id/messagecontentl"
        app:rightMenuView="@+id/messagerightmenu">
    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/messagecontentl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tourallitem_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:text="护理等级"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_tourallitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-10-02"
                android:textColor="#FF4A4A4A"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_tourallitem_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="07:37:57"
                android:textColor="#FF4A4A4A"
                android:layout_marginLeft="5dp"
                android:textSize="13sp"/>

    </com.nex3z.flowlayout.FlowLayout>
        <LinearLayout
            android:id="@+id/messagerightmenu"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@android:color/holo_red_light">

            <TextView
                android:id="@+id/tv_tourallitem_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="14sp"
                android:text="删除"/>

        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFF6F6F6"></View>


    <LinearLayout
        android:id="@+id/ll_lasttour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="上次巡视"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_lasttour_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2019-10-02"
            android:textColor="#FF4A4A4A"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_lasttour_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="07:37:57"
            android:textColor="#FF4A4A4A"
            android:layout_marginLeft="5dp"
            android:textSize="13sp"/>
        <RelativeLayout
            android:id="@+id/rl_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tv_tournurlist_imglast"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:background="@color/blue"
                android:src="@drawable/icon_message_selector"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_touramount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kdjlsjfl"/>
    </LinearLayout>

</LinearLayout>