<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".workarea.bloodtransfusionsystem.BloodOperationListFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E4F0FF" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_bloodoplist_sign"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center"
            android:text="签收"
            android:textSize="@dimen/sp_15"
            android:textColor="@drawable/textcolor_item_bloodoptype_selector" />

        <TextView
            android:id="@+id/tv_bloodoplist_trans"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:text="输注"
            android:textColor="@drawable/textcolor_item_bloodoptype_selector" />

        <TextView
            android:id="@+id/tv_bloodoplist_transend"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:text="结束"
            android:textColor="@drawable/textcolor_item_bloodoptype_selector" />

        <TextView
            android:id="@+id/tv_bloodoplist_recycling"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:text="回收"
            android:textColor="@drawable/textcolor_item_bloodoptype_selector" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#62ABFF" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="#ECF4FC" />
    <LinearLayout
        android:id="@+id/ll_bloodoplist_searchdate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_32"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginEnd="@dimen/dp_8"
            android:src="@drawable/icon_time_bottom"/>
        <TextView
            android:id="@+id/tv_bloodoplist_searchdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="2018-08-23"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="#ECF4FC" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_bloodoplist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_bloodoplist_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/icon_blood_search_empty"/>

        <TextView
            android:id="@+id/tv_bloodoplist_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="#9B9B9B"
            android:text="暂无巡视"/>

    </LinearLayout>


</LinearLayout>