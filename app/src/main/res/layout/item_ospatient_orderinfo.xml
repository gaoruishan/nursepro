<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_osporderinfo_ordertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_oval_green"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_1"
                android:textColor="@color/white"
                tools:text="皮试" />

            <TextView
                android:id="@+id/tv_jp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/bg_oval_blue"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_1"
                android:text="静配"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_osporderinfo_ordername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                tools:text="阿德福韦片T(10mg*14片)" />

            <ImageView
                android:id="@+id/img_osporderinfo_order"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_8"
                android:background="#62abff"
                android:padding="@dimen/dp_1"
                android:scaleType="fitXY"
                android:src="@drawable/tube"
                android:visibility="gone" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注：" />

            <TextView
                android:id="@+id/tv_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/ll_osporderinfo_singleorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            app:flChildSpacing="@dimen/dp_6">

            <TextView
                android:id="@+id/tv_osporderinfo_orderdatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="2018-08-25 08:00" />

            <TextView
                android:id="@+id/tv_osporderinfo_orderoperate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="皮试" />

            <TextView
                android:id="@+id/tv_osporderinfo_orderdose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="10mg" />

            <TextView
                android:id="@+id/tv_osporderinfo_orderfrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="QD" />

            <TextView
                android:id="@+id/tv_osporderinfo_ordercreator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="严医生" />


        </com.nex3z.flowlayout.FlowLayout>

        <LinearLayout
            android:id="@+id/ll_executed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:text="执行时间："
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_executed_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="32112" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_2"
                android:text="执行人："
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_executed_nur1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="32112" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_osporderinfo_multiorder1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_osporderinfo_orderdose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="10mg" />


        </LinearLayout>

        <View
            android:id="@+id/line_osporderinfo_multiorder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_3"
            android:background="@drawable/line_dash"
            android:layerType="software"
            android:visibility="gone" />

        <com.nex3z.flowlayout.FlowLayout
            android:id="@+id/ll_osporderinfo_multiorder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone"
            app:flChildSpacing="@dimen/dp_6">

            <TextView
                android:id="@+id/tv_osporderinfo_orderdatetime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="2018-08-25 08:00" />

            <TextView
                android:id="@+id/tv_osporderinfo_orderoperate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="皮试" />

            <TextView
                android:id="@+id/tv_osporderinfo_orderfrequency2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="QD" />

            <TextView
                android:id="@+id/tv_osporderinfo_ordercreator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="严医生" />


        </com.nex3z.flowlayout.FlowLayout>

        <LinearLayout
            android:id="@+id/ll_executed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_2"
                android:text="执行时间："
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_executed_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="32112" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_2"
                android:text="执行人："
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_executed_nur2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="32112" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_skintest_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/bg_skintest">

        <com.dhcc.nursepro.view.RotateTextView
            android:id="@+id/tv_skintest_result"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:gravity="center"
            android:paddingTop="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_12"
            android:text="阴"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>