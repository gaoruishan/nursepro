<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".workarea.drugloopsystem.drughandover.DrugHandoverHisDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收信息" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="#f5faff"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tv_drughandoverhisdetail_receivedatetime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="2019-6-12 15:20:33" />

                <TextView
                    android:id="@+id/tv_drughandoverhisdetail_receiveuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="护士01" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运送信息" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="#f5faff"
                android:orientation="horizontal"
                android:paddingStart="6dp"
                android:paddingTop="4dp"
                android:paddingEnd="6dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tv_drughandoverhisdetail_carryuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="YS001" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5faff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_drughandoverhisdetail_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5faff">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>