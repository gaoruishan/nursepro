<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".workarea.drugloopsystem.drughandover.DrugHandoverFragment">

    <RelativeLayout
        android:id="@+id/rl_drughandover_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_drughandover_warning"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_55"
            android:layout_centerInParent="true"
            android:background="#FFF5FAFF"
            android:gravity="center"
            android:text="请您使用扫码设备，扫描药品箱码"
            android:textColor="#FF9B9B9B"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_drughandover_warningtitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_above="@+id/tv_drughandover_warning"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="请扫描药品箱码"
            android:textColor="#FF62ABFF"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_91"
            android:layout_above="@+id/tv_drughandover_warningtitle"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/icon_patient_scan" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_drughandover_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_drughandover_scan"
            android:layout_width="match_parent"
            android:background="#f5faff"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#4a4a4a"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_drughandover_receivesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                tools:text="共23袋，已扫描3袋" />


            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_drughandover_clear"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="#4a90e2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:text="清空" />
            <TextView
                android:id="@+id/tv_drughandover_receive"
                android:layout_width="@dimen/dp_90"
                android:layout_height="match_parent"
                android:background="#62abff"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:text="接收" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>