<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_blue_light"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_operation_white"
        android:backgroundDimEnabled="true"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            > 
            <TextView
                android:id="@+id/tv_operation_patinfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                android:gravity="center"
                android:text="01床  刘患者"
                android:textColor="#FF4A4A4A"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_operation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手术名称"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold
"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#FF4A4A4A"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_operation_state"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#FF16C295"
                    android:text="状态"
                    />

                <TextView
                    android:id="@+id/tv_operation_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#FF4A4A4A"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="手术医生：李医生"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_op_applytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="申请时间"
                    android:textColor="#FF4A4A4A"/>
                <TextView
                    android:id="@+id/tv_op_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textColor="#FF4A4A4A"
                    android:text="房间"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>