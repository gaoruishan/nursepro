<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/blue_light"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/dp_10"
            > 
            <TextView
                android:id="@+id/tv_operation_bedno"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="01床"/>

            <TextView
                android:id="@+id/tv_operation_pat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_operation_bedno"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:text="患者"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_operation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手术名称"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/tv_operation_statu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="状态"
                    />

                <TextView
                    android:id="@+id/tv_checklist_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="2dp"
                    android:text="手术医生：李医生"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="手术时间"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>