<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/swipe_labout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentView="@+id/messagecontentll"
        app:rightMenuView="@+id/messagerightmenu">
    <LinearLayout
        android:id="@+id/messagecontentll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_labout_num"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_50"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="#FFF5A623">

            <TextView
                android:id="@+id/tv_labout_count"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="2"
                android:gravity="center"
                android:text="198"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_30" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/white"
                android:text="管  "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:orientation="vertical"

            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_labout_no"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="top"
                android:text="201709160737571370"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_13"/>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_labout_patname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘思薇"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/sp_16"/>

                <TextView
                    android:id="@+id/tv_labout_urgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加急"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textStyle="bold"
                    android:padding="@dimen/dp_5"
                    android:background="@color/bg_blue_light"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_16"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_labout_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="07:37:57"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/tv_labout_statu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="已发送"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_13"/>
        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/messagerightmenu"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_lapack_hedui"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:text="核对"
                android:background="@color/blue_dark"/>
            <TextView
                android:id="@+id/tv_lapack_del"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:text="删除"
                android:background="@android:color/holo_red_light"/>

        </LinearLayout>
    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#FFF6F6F6"></View>

</LinearLayout>