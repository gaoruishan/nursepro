<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_bloodop_opstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_oval_green"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_2"
                android:textColor="@color/white"
                tools:text="已回收" />

            <TextView
                android:id="@+id/tv_item_bloodop_bagno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_oval_white"
                android:layout_marginStart="@dimen/dp_8"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_2"
                tools:text="01" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_item_bloodop_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2018-09-20  08:00" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_bloodop_productdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/sp_15"
                tools:text="悬浮红细胞2.00U" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_item_bloodop_bloodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5c5c5c"
                android:textSize="@dimen/sp_15"
                tools:text="A型Rh阳性" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_bloodop_patinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                android:textSize="@dimen/sp_13"
                tools:text="7床   刘患者" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_item_bloodop_patbloodtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9b9b9b"
                android:textSize="@dimen/sp_13"
                tools:text="A型Rh阳性" />


        </LinearLayout>

        <View
            android:id="@+id/line_item_bloodop_endreason"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/line_dash"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_item_bloodop_endreason"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#ff6262"
            tools:text="终止原因：过敏" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f0f0f0"/>

</LinearLayout>
