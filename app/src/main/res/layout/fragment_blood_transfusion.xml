<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".workarea.bloodtransfusionsystem.bloodtransfusion.BloodTransfusionFragment">

    <RelativeLayout
        android:id="@+id/rl_blood_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_blood_warning"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="#FFF5FAFF"
            android:gravity="center"
            android:text="请您使用扫码设备，\n扫描患者腕带、血袋号、血制品编号、\n护士工牌（2位）"
            android:textColor="#FF9B9B9B"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_blood_warningtitle"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_above="@+id/tv_blood_warning"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:text="请扫码"
            android:textColor="#FF62ABFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="91dp"
            android:layout_above="@+id/tv_blood_warningtitle"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/icon_patient_scan" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blood"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="33dp"
                android:layout_height="47dp"
                android:src="@drawable/icon_patient_scan"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:gravity="center"
                android:text="请扫码"
                android:layout_marginLeft="15dp"
                android:textColor="#FF62ABFF"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="受血人信息"
            android:textColor="#FF9B9B9B"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tv_bloodtransfusion_patinfo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_blood_content_selector"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="请扫描患者腕带条码"
            android:textColor="@drawable/textcolor_blood_content_selector"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="血袋信息"
            android:textColor="#FF9B9B9B"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tv_bloodtransfusion_bloodbag"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_blood_content_selector"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="请扫描血袋条码"
            android:textColor="@drawable/textcolor_blood_content_selector"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="血制品信息"
            android:textColor="#FF9B9B9B"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tv_bloodtransfusion_bloodinfo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_blood_content_selector"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="请扫描血制品条码"
            android:textColor="@drawable/textcolor_blood_content_selector"
            android:textSize="15sp"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="护士信息"
            android:textColor="#FF9B9B9B"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/tv_bloodtransfusion_nurse1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="护士1"
                android:textColor="@drawable/textcolor_blood_content_selector"
                android:background="@drawable/bg_blood_content_selector"
                android:textSize="15sp"
                />
            <LinearLayout
                android:id="@+id/ll_bloodtransfusion_device"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/img_device1"
                android:orientation="horizontal"
                />
            <EditText
                android:id="@+id/tv_bloodtransfusion_nurse2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="护士2"
                android:textColor="@drawable/textcolor_blood_content_selector"
                android:background="@drawable/bg_blood_content_selector"
                android:textSize="15sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_bloodTransfusion_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_dialog_sure"
            android:paddingBottom="10dp"
            android:paddingEnd="46dp"
            android:paddingStart="46dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>