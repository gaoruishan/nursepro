<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_320"
    android:layout_height="@dimen/dp_390"
    android:layout_marginBottom="@dimen/dp_40"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_dialog">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/showmsg_dialog_bg"
            android:layout_above="@+id/ll_sure"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_15"
                android:gravity="center"
                android:text="输注结果"
                android:textColor="#FF62ABFF"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="输注结果"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">
                <TextView
                    android:id="@+id/tv_endsucess_end"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blood_end_selector"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="完成"
                    android:textColor="@drawable/textcolor_blood_end_selector"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_endsucess_centerfinish"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blood_end_selector"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="终止"
                    android:textColor="@drawable/textcolor_blood_end_selector"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="终止原因"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20">
                <TextView
                    android:id="@+id/tv_endsucess_reason"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blood_end_selector"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="过敏"
                    android:textColor="@drawable/textcolor_blood_end_selector"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginRight="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/tv_endsucess_otherreason"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blood_end_selector"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:text="其他"
                    android:textColor="@drawable/textcolor_blood_end_selector"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_dialog"
            android:gravity="center">

            <Button
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="No"
                android:visibility="gone"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/sp_16" />


            <Button
                android:id="@+id/yes"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginBottom="@dimen/dp_25"
                android:background="@drawable/shape_btn_sure"
                android:gravity="center"
                android:singleLine="true"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>