<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="@dimen/dp_200"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示"
        android:gravity="center"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:textColor="@color/white"
        android:background="@drawable/bg_dialog_tip"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16" />
    <TextView
        android:id="@+id/tv_popup_allotbedresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="是否退出移动护士站？"
        android:textColor="#4a4a4a"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_exit_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_36"
            android:background="@drawable/bg_dialog_cancel"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_40"
            android:paddingStart="@dimen/dp_40"
            android:paddingTop="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
        <TextView
            android:id="@+id/tv_exit_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/bg_dialog_sure"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_40"
            android:paddingStart="@dimen/dp_40"
            android:paddingTop="@dimen/dp_10"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

</LinearLayout>