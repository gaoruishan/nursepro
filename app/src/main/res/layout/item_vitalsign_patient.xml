<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_vitalsign_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_6">

            <TextView
                android:id="@+id/tv_vitalsign_patient_bedno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vital_sign_text_color"
                android:textStyle="bold"
                tools:text="01床" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <com.dhcc.nursepro.view.CareLevelTextView
                android:id="@+id/tv_vitalsign_patient_carelevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vital_sign_text_color"
                tools:text="一级" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_vitalsign_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:textColor="@color/vital_sign_text_color"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    tools:text="刘患者" />

                <ImageView
                    android:id="@+id/img_vitalsign_patient_sex"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_8"
                    tools:src="@drawable/sex_male" />

             <com.dhcc.nursepro.view.PatIconView
                 android:id="@+id/paticon_vitalsign"
                 android:layout_width="@dimen/dp_0"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"></com.dhcc.nursepro.view.PatIconView>
            </LinearLayout>

            <View
                android:id="@+id/line_vitalsign_patient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_6"
                android:background="#F6F6F6"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#ECECEC" />

    <LinearLayout
        android:id="@+id/ll_vitalsign_patient_skinorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_vitalsign_vitalsign_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/vital_sign_border"
            android:textColor="@color/text_color_gray"
            android:text="体征录入" />

        <TextView
            android:id="@+id/tv_vitalsign_event_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/vital_sign_border"
            android:textColor="@color/text_color_gray"
            android:text="事件登记" />

        <TextView
            android:id="@+id/tv_vitalsign_tmp_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/vital_sign_border"
            android:text="体征曲线图" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#F6F6F6" />

</LinearLayout>
