<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ll_type_1"
    android:layout_marginTop="@dimen/dp_15"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <com.noober.background.view.BLLinearLayout
      app:bl_corners_radius="@dimen/dp_5"
      android:layout_width="@dimen/dp_150"
      android:minWidth="@dimen/dp_80"
      android:gravity="center"
      app:bl_solid_color="@color/white"
      app:bl_stroke_color="@color/blue_dark2"
      app:bl_stroke_width="@dimen/dp_2"
      android:padding="@dimen/dp_5"
      android:orientation="vertical"
      android:layout_height="@dimen/dp_100">

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">

          <com.noober.background.view.BLTextView
              android:id="@+id/tv_bed1"
              tools:text="02床"
              android:paddingLeft="@dimen/dp_5"
              android:paddingRight="@dimen/dp_5"
              app:bl_corners_radius="@dimen/dp_5"
              app:bl_solid_color="@color/blue_dark"
              android:textSize="@dimen/dp_16"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              tools:text="上扣扣上"
              android:id="@+id/tv_name1"
              android:layout_weight="1"
              android:padding="@dimen/dp_5"
              android:textSize="@dimen/dp_14"
              android:textStyle="bold"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <ImageView
              android:id="@+id/img_sex"
              android:layout_width="@dimen/dp_28"
              android:layout_height="@dimen/dp_28"
              android:layout_gravity="center"
              android:padding="@dimen/dp_2"
              tools:src="@drawable/man" />
      </LinearLayout>
      <TextView
          android:id="@+id/tv_regno1"
          tools:text="住院号:0000000001"
          android:padding="@dimen/dp_5"
          android:textSize="@dimen/dp_14"
          android:singleLine="true"
          android:ellipsize="end"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_num1"
          tools:text="数量: 001"
          android:paddingLeft="@dimen/dp_5"
          android:paddingRight="@dimen/dp_5"
          android:textSize="@dimen/dp_17"
          android:textColor="@color/text_color_gray"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

  </com.noober.background.view.BLLinearLayout>
</LinearLayout>