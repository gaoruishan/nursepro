<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_40">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_36"
        android:paddingTop="@dimen/dp_40"
        android:paddingEnd="@dimen/dp_36">

        <ImageView
            android:id="@+id/img_rlregresult"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:src="@drawable/icon_popup_sucess" />

        <TextView
            android:id="@+id/tv_rlregresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="余液登记成功"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_rlregresult_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_rlregresult_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/bg_dialog_sure"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_36"
            android:paddingStart="@dimen/dp_36"
            android:paddingTop="@dimen/dp_10"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
        <TextView
            android:id="@+id/tv_rlregresult_cancle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/bg_dialog_cancel"
            android:paddingBottom="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_36"
            android:paddingStart="@dimen/dp_36"
            android:paddingTop="@dimen/dp_10"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />


    </LinearLayout>

</LinearLayout>