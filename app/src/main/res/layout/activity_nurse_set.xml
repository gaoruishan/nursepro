<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.NurseSetActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="25sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医嘱查询时间设置"
            android:textSize="22.0dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="319dp"
        android:layout_height="60dp" >

        <Button
            android:id="@+id/btn_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="2013-03-20 18:00:00"
            android:textSize="22.0dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="60dp" >

        <Button
            android:id="@+id/btn_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013-03-20 18:00:00"
            android:textSize="22.0dip" />
    </LinearLayout>


        <Button
            android:id="@+id/btn_bed_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="床位设置"
            android:textSize="22.0dip" />

    <Button
        android:id="@+id/btn_changeloc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="切换登陆病区"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新医嘱提示方式"
        android:textSize="22.0dip" />

    <CheckBox
        android:id="@+id/check_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="灯光提示"
        android:textSize="22.0dip" />

    <CheckBox
        android:id="@+id/check_vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="振动提示"
        android:textSize="22.0dip" />

    <CheckBox
        android:id="@+id/check_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="声音提示"
        android:textSize="22.0dip" />

    <CheckBox
        android:id="@+id/check_all_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="病区所有病人提示"
        android:textSize="22.0dip" />

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新登陆"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>