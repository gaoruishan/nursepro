<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"></View>
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@color/white"
        android:text="消息"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/workarea_device_color"></View>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_message_neworder_title"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/bg_messagetitle"
                android:gravity="center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/icon_message_selector" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="新医嘱"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_message_neworder_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_message_count"
                    android:paddingBottom="2dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tool:text="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_message_neworder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/ll_message_abnormal_title"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/bg_messagetitle"
                android:gravity="center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/icon_message_selector" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="危急值"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_message_abnormal_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_message_count"
                    android:paddingBottom="2dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tool:text="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_message_abnormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/ll_message_consultation_title"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/bg_messagetitle"
                android:gravity="center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/icon_message_selector" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="会诊"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_message_consultation_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_message_count"
                    android:paddingBottom="2dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tool:text="1" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_message_consultation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/ll_message_skin_title"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/bg_messagetitle"
                android:gravity="center_vertical"
                android:paddingEnd="12dp"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/icon_message_selector" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="皮试"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_message_skin_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_message_count"
                    android:paddingBottom="2dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    tool:text="1" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_message_skin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
