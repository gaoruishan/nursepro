<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.dhcc.res.infusion.CustomSheetListView
                android:id="@+id/custom_sheet_list"
                android:layout_width="@dimen/dp_85"
                android:layout_height="match_parent"
                android:background="@color/dhcc_orderexecute_left_bgcolor"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.dhcc.res.infusion.CustomDateTimeView
                    android:id="@+id/custom_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="#f6f6f6"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list_plan"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_bottom_plan_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#4a90e2"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:text="目标达成天数" />
          <TextView
                android:layout_weight="1"
                android:id="@+id/tv_bottom_evaluation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/blue_dark"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:text="评价" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>