<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/comm_bg_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_20"
    >

        <ImageView
            android:id="@+id/iv_comm"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:visibility="gone"
            android:src="@drawable/icon_popup_sucess"/>

        <TextView
            android:id="@+id/tv_txt_comm"
            android:layout_width="@dimen/dp_240"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="分床成功"
            android:layout_marginBottom="@dimen/dp_15"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/base_full_loading_background"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_ok_comm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_6"
                android:background="@drawable/comm_bg_dialog_sure"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
