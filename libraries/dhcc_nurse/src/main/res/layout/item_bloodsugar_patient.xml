<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_vitalsign_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#F6F6F6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_6">

            <TextView
                android:id="@+id/tv_bloodsugar_patient_bedno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:text="01床" />

            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_5"
            android:paddingTop="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_bloodsugar_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    tools:text="刘患者" />

                <ImageView
                    android:id="@+id/img_vitalsign_patient_sex"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_8"
                    tools:src="@drawable/dhcc_sex_female" />

                <View
                    android:id="@+id/paticon_view_left"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_1"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_bedmap_patient_newpatient"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:textSize="@dimen/sp_13"
                        android:gravity="center"
                        android:background="@drawable/bg_rectangle_purple"
                        android:text="入"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/tv_bedmap_patient_operation"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginStart="@dimen/dp_6"
                        android:gravity="center"
                        android:background="@drawable/bg_rectangle_blue"
                        android:text="术"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_bedmap_patient_critical"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:gravity="center"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@drawable/bg_rectangle_red"
                        android:text="危"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_bedmap_patient_arrears"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:gravity="center"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@drawable/bg_rectangle_yellow"
                        android:text="欠"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_bedmap_patient_criticalvalue"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:gravity="center"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@drawable/bg_rectangle_orange"
                        android:text="急"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_bedmap_patient_skintest"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:gravity="center"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@drawable/bg_rectangle_green"
                        android:text="敏"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_bedmap_patient_fever"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:gravity="center"
                        android:textSize="@dimen/sp_13"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@drawable/bg_rectangle_red2"
                        android:text="热"
                        android:textColor="@color/white" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_bedmap_patient_infect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_6"
                        android:background="@drawable/bg_rectangle_infect"
                        android:paddingStart="@dimen/dp_3"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingEnd="@dimen/dp_3"
                        android:paddingBottom="@dimen/dp_2"
                        android:text="传"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/tv_epd_notreport"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_6"
                        android:gravity="center"
                        android:background="@drawable/img_ept_notreport"/>
                    <TextView
                        android:id="@+id/tv_epd_report"
                        android:layout_width="@dimen/dp_19"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_6"
                        android:gravity="center"
                        android:background="@drawable/img_epd_report"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/line_vitalsign_patient"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_6"
                android:background="#F6F6F6"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#ECECEC" />

    <LinearLayout
        android:id="@+id/ll_vitalsign_patient_skinorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_sugar_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/text_color_gray"
            android:text="血糖录入" />

        <TextView
            android:id="@+id/tv_sugar_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/text_color_gray"
            android:text="血糖查询" />

        <TextView
            android:id="@+id/tv_sugar_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_24"
            android:textColor="@color/text_color_gray"
            android:text="血糖曲线图" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#F6F6F6" />

</LinearLayout>
