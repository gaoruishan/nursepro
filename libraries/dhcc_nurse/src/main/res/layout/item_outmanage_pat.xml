<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:id="@+id/ll_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_patinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000003770 "
                android:textColor="#101010"
                android:textSize="@dimen/sp_16" />

            <View
                android:id="@+id/view_sex"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/dhcc_sex_male"/>
            <TextView
                android:id="@+id/tv_age"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="22岁 "
                android:textColor="#101010"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:id="@+id/tv_patno"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="1000003770 "
                android:textColor="#101010"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>
        <TextView
            android:paddingLeft="@dimen/dp_9"
            android:paddingTop="@dimen/dp_5"
            android:layout_below="@+id/ll_parent"
            android:id="@+id/tv_datetime"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            tools:text="外出时间:2021-08-19 14:23"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomSkinTagView
            android:id="@+id/custom_skin_tag"
            android:layout_width="@dimen/dp_60"
            android:layout_alignParentEnd="true"
            android:layout_height="@dimen/dp_60"/>
    </RelativeLayout>
    <View
        android:id="@+id/line_oeporderinfo_multiorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software" />
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/dp_8"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:background="@drawable/dhcc_skin_bg_selected"
            android:text="出病区"
            android:textSize="@dimen/sp_16" />

      <TextView
            android:id="@+id/tv_see"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_25"
            android:gravity="center"
            android:background="@drawable/dhcc_skin_bg_selected"
            android:text="回病区"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</LinearLayout>