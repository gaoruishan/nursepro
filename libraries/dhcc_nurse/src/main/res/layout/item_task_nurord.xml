<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_patinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1000003770 "
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <View
            android:visibility="gone"
            android:id="@+id/view_sex"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/dhcc_sex_female"></View>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.noober.background.view.BLTextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="center"
                android:minWidth="@dimen/dp_45"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_1"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_1"
                tools:text="检测"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:bl_corners_radius="@dimen/dp_10"
                app:bl_solid_color="@color/bg_gold" />

            <com.noober.background.view.BLTextView
                android:id="@+id/bl_tv_status"
                tools:text="未执行"
                android:gravity="center"
                android:minWidth="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                app:bl_corners_radius="@dimen/dp_10"
                app:bl_solid_color="@color/bg_green"
                android:layout_marginRight="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_1"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_1"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/dhcc_icon_orderexec_selector" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000003770 "
        android:textColor="#101010"
        android:textSize="@dimen/sp_16" />
    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/ll_aboutord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/dhcc_ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="2018-08-25 08:00" />

        <TextView
            android:id="@+id/tv_orderoperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/dhcc_ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            tools:text="皮试" />
    </com.nex3z.flowlayout.FlowLayout>

    <View
        android:id="@+id/line_oeporderinfo_multiorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software" />

</LinearLayout>