<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_patinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1000003770 "
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <View
            android:visibility="gone"
            android:id="@+id/view_sex"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/dhcc_sex_female"></View>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000003770 "
        android:textColor="#101010"
        android:textSize="@dimen/sp_16" />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000003770 "
        android:textColor="#101010"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.noober.background.view.BLTextView
                android:id="@+id/bl_tv_status"
                android:text="需处理临嘱"
                android:gravity="center"
                android:minWidth="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                app:bl_corners_radius="@dimen/dp_10"
                app:bl_solid_color="@color/bg_green"
                android:paddingLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/ll_ords"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></LinearLayout>
            <com.nex3z.flowlayout.FlowLayout
                android:id="@+id/ll_oeporderinfo_multiorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_oeporderinfo_orderdatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="2018-08-25 08:00" />

                <TextView
                    android:id="@+id/tv_oeporderinfo_orderoperate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="皮试" />

                <TextView
                    android:id="@+id/tv_oeporderinfo_orderdose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="皮试" />
                <TextView
                    android:id="@+id/tv_oeporderinfo_orderfrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="QD" />

                <TextView
                    android:id="@+id/tv_oeporderinfo_ordercreator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="严医生" />


            </com.nex3z.flowlayout.FlowLayout>

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/dhcc_icon_orderexec_selector" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_oeporderinfo_multiorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software" />

</LinearLayout>