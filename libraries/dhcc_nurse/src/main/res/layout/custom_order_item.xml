<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_line1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.noober.background.view.BLTextView
            android:id="@+id/bl_tv_status"
            android:text="需处理临嘱"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:textColor="@color/white"
            app:bl_corners_radius="@dimen/dp_15"
            app:bl_solid_color="@color/blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_line2"
        android:layout_margin="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_content"
            tools:text="复方氨基酸注射液(11.4%乐凡命)[250ml]"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_content"
            android:paddingLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="250mg    1袋"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/sp_12"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software"/>
</LinearLayout>