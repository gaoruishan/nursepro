<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_61"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_detail_codetitle"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_60"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_detail_datetime"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_detail_status"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_detail_value"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_detail_user"
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></View>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/dhcc_text_view_text_color"></View>
</LinearLayout>