<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_12">

            <ImageView
                android:onClick="testWebView"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@drawable/dhcc_login_logo" />
            <TextView
                android:id="@+id/tv_voice_ip"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_20"
                android:text="语音IP"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6">

                <TextView
                    android:onClick="lgtestServer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi ! "
                    android:textColor="#62ABFF"
                    android:textSize="@dimen/sp_35" />

                <TextView
                    android:onClick="openLog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:text="欢迎使用移动护士站"
                    android:textColor="#62ABFF"
                    android:textSize="@dimen/sp_20" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_42"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:textColor="#c5C5C5" />

                <EditText
                    android:id="@+id/et_login_usercode"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@null"
                    android:hint="请输入用户名或扫描工牌"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#9b9b9b"
                    android:textSize="@dimen/sp_16" />
                <ImageView
                    android:id="@+id/img_login_usercode_clear"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/dhcc_clear"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#d5d5d5"
                android:textColor="#c5C5C5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textColor="#c5C5C5" />

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="请输入登录密码"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#9b9b9b"
                    android:textSize="@dimen/sp_16" />
                <ImageView
                    android:id="@+id/img_login_password_clear"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/dhcc_clear"/>
                <ImageView
                    android:id="@+id/img_login_password_showhide"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginStart="@dimen/dp_8"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/dhcc_icon_pwd_selector"/>
            </LinearLayout>
            <View
                android:id="@+id/v_pin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#d5d5d5"
                android:visibility="gone"
                android:textColor="#c5C5C5" />

            <LinearLayout
                android:id="@+id/ll_pin"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN码"
                    android:textColor="#c5C5C5" />

                <EditText
                    android:id="@+id/et_login_pin"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="请输入登录密码"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#9b9b9b"
                    android:textSize="@dimen/sp_16" />
                <ImageView
                    android:id="@+id/img_login_pin_clear"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/dhcc_clear"/>
                <ImageView
                    android:id="@+id/img_login_pin_showhide"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginStart="@dimen/dp_8"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/dhcc_icon_pwd_selector"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#d5d5d5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病区"
                    android:textColor="#c5C5C5" />

                <TextView
                    android:id="@+id/tv_login_ward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:text="请选择登录病区"
                    android:textColor="#9b9b9b"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#d5d5d5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_login_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@drawable/dhcc_bg_login_login_selector"
                android:gravity="center"
                android:textColor="@drawable/dhcc_textcolor_login_login_selector"
                android:textSize="@dimen/sp_16"
                android:text="登录" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:padding="@dimen/dp_6">

                <LinearLayout
                    android:id="@+id/ll_login_rememberme"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:background="@drawable/dhcc_bg_login_remember_selector"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_16"
                        android:textSize="@dimen/sp_12"
                        android:gravity="right|center"
                        android:text="记住我" />
                </LinearLayout>
                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_3"
                    />
                <TextView
                    android:id="@+id/tv_login_setip"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:text="设置IP地址"
                    android:gravity="left"
                    android:textSize="@dimen/sp_12"
                    />
                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/blue"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_3"
                    />
                <TextView
                    android:id="@+id/tv_login_ca"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_16"
                    android:text="CA登陆"
                    android:onClick="caLogin"
                    android:gravity="left"
                    android:textSize="@dimen/sp_12"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/tv_voice"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:background="@drawable/voice_button_selector"
        android:visibility="gone"
        ></Button>


</RelativeLayout>