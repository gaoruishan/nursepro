<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_20"
>

    <RelativeLayout
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_360"
        android:background="@drawable/comm_shape_dialog"
        >
        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comm_showmsg_dialog_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center"
                android:text="CA扫码登陆"
                android:textColor="#FF62ABFF"
                android:textSize="@dimen/sp_18"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/blue"/>
            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_280"
                android:layout_height="@dimen/dp_280"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_below="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_no"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_45"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="修改"
                android:textColor="#FF62ABFF"
                android:textSize="@dimen/sp_17"
                app:bl_corners_radius="@dimen/dp_6"
                app:bl_solid_color="#FFFFFF"
                app:bl_stroke_color="#62ABFF"
                app:bl_stroke_width="@dimen/dp_1"
                tools:ignore="MissingPrefix"/>


            <Button
                android:id="@+id/btn_yes"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                app:bl_corners_radius="@dimen/dp_6"
                app:bl_solid_color="#FF62ABFF"
                tools:ignore="MissingPrefix"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>