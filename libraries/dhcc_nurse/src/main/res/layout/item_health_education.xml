<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_lab_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            tools:text="1000003770 "
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <com.noober.background.view.BLTextView
            android:id="@+id/bl_tv_status"
            android:text="需处理临嘱"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            app:bl_corners_radius="@dimen/dp_10"
            app:bl_solid_color="@color/bg_green"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_weight="1"
        tools:text="出院宣教出院宣教出院宣教出院宣教出院宣教出院宣教出院宣教 "
        android:textColor="#101010"
        android:lineHeight="@dimen/dp_22"
        android:textSize="@dimen/sp_15" />
    <LinearLayout
        android:id="@+id/ll_lab"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content">
        <com.noober.background.view.BLTextView
            android:id="@+id/tv_status_lab"
            android:text="停止"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            app:bl_corners_radius="@dimen/dp_5"
            app:bl_solid_color="@color/blue_dark"
            android:textSize="@dimen/sp_10"
            android:paddingRight="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_lab_user"
            tools:text="护士01"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/dhcc_ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_lab_time"
            tools:text="护士01"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/dhcc_ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<!--    <include layout="@layout/item_blood_child_layout2"/>-->
    <LinearLayout
        android:id="@+id/ll_exeinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">

        <com.noober.background.view.BLTextView
            android:text="执"
            android:id="@+id/bl_tv_exe"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            app:bl_corners_radius="@dimen/dp_5"
            app:bl_solid_color="@color/blue_dark"
            android:textSize="@dimen/sp_10"
            android:paddingRight="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_exetime"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/dhcc_ordersearch_text_color"
            android:textSize="@dimen/sp_13"
            tools:text="2018-08-25 08:00" />

        <TextView
            android:id="@+id/tv_exeuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/dhcc_ordersearch_text_color"
            android:textSize="@dimen/sp_13"
            tools:text="皮试" />


    </LinearLayout>

    <View
        android:id="@+id/line_oeporderinfo_multiorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software" />

</LinearLayout>