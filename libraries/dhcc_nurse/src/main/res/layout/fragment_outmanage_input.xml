<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="01 看守所里"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>
    <LinearLayout
        android:id="@+id/ll_in"
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/dp_15"
            android:text="回病区时间"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"/>

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_datetime_in"
            android:layout_marginLeft="@dimen/dp_20"
            app:bl_focused_activated="@drawable/dhcc_skin_bg_selected"
            app:bl_focused_drawable="@drawable/dhcc_skin_bg_selected"
            app:bl_unSelected_drawable="@drawable/dhcc_skin_bg_normal"
            app:bl_unFocused_drawable="@drawable/dhcc_skin_bg_normal"
            android:padding="@dimen/dp_6"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/dp_15"
            android:text="类型"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"/>

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_type"
            android:layout_marginLeft="@dimen/dp_20"
            app:bl_focused_drawable="@drawable/dhcc_skin_bg_selected"
            app:bl_unSelected_drawable="@drawable/dhcc_skin_bg_normal"
            app:bl_unFocused_drawable="@drawable/dhcc_skin_bg_normal"
            android:padding="@dimen/dp_2"
            android:gravity="center"
            android:drawableEnd="@drawable/dhcc_arrow_down"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/dp_15"
            android:text="出病区时间"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"/>

        <com.noober.background.view.BLTextView
            android:id="@+id/tv_datetime_out"
            android:layout_marginLeft="@dimen/dp_20"
            app:bl_selected_drawable="@drawable/dhcc_skin_bg_selected"
            app:bl_unSelected_drawable="@drawable/dhcc_skin_bg_normal"
            app:bl_unFocused_drawable="@drawable/dhcc_skin_bg_normal"
            android:padding="@dimen/dp_6"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/dp_15"
            android:text="陪同人员"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"/>

        <com.noober.background.view.BLEditText
            android:id="@+id/et_user"
            android:layout_marginLeft="@dimen/dp_20"
            app:bl_focused_drawable="@drawable/dhcc_skin_bg_selected"
            app:bl_unSelected_drawable="@drawable/dhcc_skin_bg_normal"
            app:bl_unFocused_drawable="@drawable/dhcc_skin_bg_normal"
            android:padding="@dimen/dp_6"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:padding="@dimen/dp_15"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/dp_15"
            android:text="备注"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"/>

        <com.noober.background.view.BLEditText
            android:id="@+id/et_remark"
            android:layout_marginLeft="@dimen/dp_20"
            app:bl_focused_drawable="@drawable/dhcc_skin_bg_selected"
            app:bl_unSelected_drawable="@drawable/dhcc_skin_bg_normal"
            app:bl_unFocused_drawable="@drawable/dhcc_skin_bg_normal"
            android:padding="@dimen/dp_6"
            android:lines="5"
            android:gravity="left"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/text_color_gray_c"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:padding="@dimen/dp_15"
            android:gravity="center"
            android:text="取消"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:padding="@dimen/dp_15"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>