<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#8FD3F4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间选择："
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_20"
            ></TextView>
        <com.dhcc.res.infusion.CustomDateTimeView
            android:id="@+id/custom_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="#8FD3F4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:layout_width="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:text="血糖采集状态："
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            ></TextView>

        <TextView
            android:id="@+id/tv_sugar_state"
            android:minWidth="@dimen/dp_120"
            android:maxWidth="@dimen/dp_250"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/bg_text_area"
            android:layout_marginLeft="@dimen/dp_2"
            android:padding="@dimen/dp_4"
            android:drawableEnd="@drawable/dhcc_arrow_down"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:layout_width="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:text="血糖值："
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            ></TextView>

        <EditText
            android:id="@+id/et_sugar_value"
            android:minWidth="@dimen/dp_120"
            android:maxWidth="@dimen/dp_250"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/bg_text_area"
            android:padding="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_2"
            android:textSize="@dimen/sp_17" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mmol/L"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            ></TextView>
    </LinearLayout>
    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/fl_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_150"
        android:layout_marginTop="@dimen/sp_15"
        >
    </com.nex3z.flowlayout.FlowLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15">
        <TextView
            android:layout_width="@dimen/dp_130"
            android:layout_height="wrap_content"
            android:text="备注："
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            ></TextView>

        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_50"
            android:maxHeight="@dimen/dp_500"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@drawable/bg_text_area"
            android:layout_marginLeft="@dimen/dp_2"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

</LinearLayout>