<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.dhcc.res.infusion.CustomSheetTabView
            android:id="@+id/custom_top_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomDateTimeView
            android:id="@+id/custom_date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="#f6f6f6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.dhcc.res.infusion.CustomSheetListView
                android:id="@+id/custom_left_sheet"
                android:layout_width="@dimen/dp_85"
                android:layout_height="match_parent"
                android:background="@color/dhcc_orderexecute_left_bgcolor"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.dhcc.res.infusion.CustomDateTimeView
                    android:id="@+id/custom_date2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="#f6f6f6"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>

            </LinearLayout>
        </LinearLayout>

        <com.dhcc.res.custom.CustomBottomView
            android:id="@+id/custom_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!--    扫码页-->
    <com.dhcc.res.infusion.CustomScanView
        android:id="@+id/custom_scan"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>