<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:contentView="@+id/ll_content"
    app:rightMenuView="@+id/ll_rightmenu">

    <RelativeLayout
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ques_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_weight="1"
                tools:text="1000003770 "
                android:textStyle="bold"
                android:textColor="#101010"
                android:textSize="@dimen/sp_17" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
<!--                计划已制定（绿色）、计划未制定（黑色）、计划到期（红色）、未评价（黑色）、触发数据已调整（红色）、已撤销（红色）-->

                <com.nex3z.flowlayout.FlowLayout
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.noober.background.view.BLTextView
                        android:id="@+id/bl_plan_status"
                        tools:text="计划已制定"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        app:bl_corners_radius="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:paddingRight="@dimen/dp_6"
                        app:bl_stroke_color="@color/bg_green"
                        android:textColor="@color/bg_green"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"/>


                    <com.noober.background.view.BLTextView
                        android:id="@+id/bl_plan_expr"
                        tools:text="计划到期"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        app:bl_corners_radius="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:paddingRight="@dimen/dp_6"
                        app:bl_stroke_color="@color/dhcc_tomato"
                        android:textColor="@color/dhcc_tomato"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"/>

                    <com.noober.background.view.BLTextView
                        android:id="@+id/bl_plan_cstatus"
                        tools:text="未评价"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        app:bl_corners_radius="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_6"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textSize="@dimen/sp_12"
                        android:paddingRight="@dimen/dp_6"
                        app:bl_stroke_color="@color/black"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"/>

                </com.nex3z.flowlayout.FlowLayout>



                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="对对对对对对对对对对对对"
                    android:textColor="#101010"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_13"
                    tools:text="2018-08-25 08:00" />
                <TextView
                    android:id="@+id/tv_cancel_time"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_13"
                    tools:text="2018-08-25 08:00" />

                <TextView
                    android:id="@+id/tv_stop_time"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_13"
                    tools:text="2018-08-25 08:00" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_item"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line_oeporderinfo_multiorder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_3"
            android:background="@drawable/dhcc_line_dash"
            android:layerType="software" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="@dimen/dp_60">

        <com.dhcc.res.infusion.CustomSkinTagView
            android:id="@+id/custom_skin_tag"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_5" />

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_8"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/dhcc_icon_orderexec_selector" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_rightmenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_item_ques_undo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:text="撤销"
            android:gravity="center"
            android:background="@android:color/holo_red_light"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>
        <TextView
            android:id="@+id/tv_item_ques_stop"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:text="停止"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/bg_gold"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>
        <TextView
            android:id="@+id/tv_item_ques_copy"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:text="复制"
            android:visibility="gone"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/blue_dark"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>
</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>