<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/tv_patinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1000003770 "
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

        <View
            android:id="@+id/view_sex"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/dhcc_sex_male"/>
        <TextView
            android:id="@+id/tv_patno"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1000003770 "
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_idcard"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="身份证:1000003770 "
                android:textColor="#101010"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/dhcc_icon_orderexec_selector" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_oeporderinfo_multiorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software" />
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/dp_8"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:background="@drawable/dhcc_skin_bg_selected"
            android:text="体温录入"
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

      <TextView
            android:id="@+id/tv_see"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:background="@drawable/dhcc_skin_bg_selected"
            android:text="体温查看"
            android:textColor="#101010"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</LinearLayout>