<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <com.dhcc.res.infusion.CustomSelectView
            android:id="@+id/custom_select_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title_txt"
            android:textSize="@dimen/dp_17"
            tools:text="空数据倒计时空数据"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"/>

        <com.dhcc.res.infusion.CustomSelectView
            android:id="@+id/custom_select_interve"
            android:textSize="@dimen/dp_17"
            tools:text="空数据倒计时空数据"
            android:lines="2"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/dhcc_skin_bg_selected"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomSelectView
            android:id="@+id/custom_select_fre"
            android:textSize="@dimen/dp_17"
            tools:text="空数据倒计时空数据"
            android:lines="2"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/dhcc_skin_bg_selected"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_bottom_plan_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#4a90e2"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:visibility="gone"
            android:text="全选" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_bottom_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/blue_dark"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:text="保存" />

    </LinearLayout>
</LinearLayout>