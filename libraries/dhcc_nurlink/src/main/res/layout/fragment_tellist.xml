<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_tellist_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_telstatu"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/nurlink_icon_call_list"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"></ImageView>
            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:text="科室"
                android:textSize="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/dhcc_gray"></TextView>
            <TextView
                android:id="@+id/tv_tel_call"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:background="@drawable/dhcc_setting_arrow"
                android:textColor="@color/white"></TextView>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_selall"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/icon_orderexec_selector"
                android:gravity="center"
                android:padding="@dimen/dp_8"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全选"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"></TextView>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dhcc_gray"></View>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_setting_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setting_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择科室"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_28" />

            <View
                android:id="@+id/img_setting_point"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_7"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@drawable/dhcc_point_circle" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_telephone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF4F4F4"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
   <LinearLayout
       android:visibility="gone"
       android:id="@+id/ll_pin"
       android:layout_width="@dimen/dp_35"
       android:layout_height="match_parent"
       android:layout_marginTop="@dimen/dp_60"
       android:layout_alignParentEnd="true"
       android:orientation="vertical">
   </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_voip"
            android:layout_width="@dimen/dp_200"
            android:layout_height="match_parent"
            android:background="@drawable/dhcc_bg_login_login_normal"></EditText>
        <TextView
            android:id="@+id/tv_call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/comm_bg_dialog_sure"
            android:text="拨号"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/white"
            android:gravity="center"></TextView>
    </LinearLayout>

</RelativeLayout>