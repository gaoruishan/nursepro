<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/et_skin_nurname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:textColor="@color/blue"
        android:textSize="@dimen/dp_42"
        android:gravity="center|bottom"
        android:textStyle="bold"
        tools:text="王晶"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="2">
        <EditText
            android:id="@+id/et_skin_nurpass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#F5FAFF"
            android:gravity="center"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:inputType="textPassword"
            android:hint="点击输入密码"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1"></View>
        <TextView
            android:id="@+id/tv_skinresult_sure"
            android:layout_width="@dimen/dp_236"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/dhcc_bg_login_login_selector"
            android:textColor="@drawable/dhcc_textcolor_login_selector"
            android:textSize="@dimen/sp_22"
            android:gravity="center"
            android:text="登录" />
        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:layout_weight="1"></View>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">


        <LinearLayout
            android:visibility="gone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_skinresult_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dhcc_bg_dialog_cancel"
                android:paddingStart="@dimen/dp_36"
                android:paddingTop="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_36"
                android:paddingBottom="@dimen/dp_8"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>