<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF000000"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_cancle"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:background="@drawable/img_dialog_cancle"></View>
    </RelativeLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="0.8"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_30"
        android:gravity="center|bottom"
        android:textStyle="bold"
        android:text="语音留言"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/tv_voice_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请按住底部按钮进行注册"
            android:gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_10"></TextView>
        <RelativeLayout
            android:id="@+id/rl_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_voice_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_voicerate_0"
                android:layout_centerInParent="true"
                ></ImageView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="2"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_speec"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:background="@drawable/note_voice_play_selector" />
            <Button
                android:id="@+id/btn_send"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_rectangle_deepblue"
                android:text="发送" />
        </LinearLayout>

    </LinearLayout>










</LinearLayout>