<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_77"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/tv_tel_call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_telstatu"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/nurlink_icon_call_reject"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_15"></ImageView>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:text="张三"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/dp_18"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/black"></TextView>
        <LinearLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_50"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_call_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/sp_18"
                android:text="2020-11-11 12:23"></TextView>
            <TextView
                android:visibility="gone"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_3"
                android:text="呼叫"
                android:gravity="center"
                android:textSize="@dimen/sp_18"
                android:background="@drawable/bg_rectangle_deepblue"
                android:textColor="@color/white"></TextView>

        </LinearLayout>

    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:layout_marginLeft="@dimen/dp_20"
       android:layout_marginRight="@dimen/dp_2"
       android:background="#FFF4F4F4"></View>

</LinearLayout>