<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/comm_bg_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_36"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_36">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_40"
            android:gravity="center"
            android:text="选择类型"
            android:textColor="@color/text_color_gray_8"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />


        <TextView
            android:visibility="gone"
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center"
            android:text="请确认是否删除"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_22"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/ll_sound_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/sp_50">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_sound_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_drugpre_dialog"
        android:layout_width="@dimen/dp_360"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:background="@drawable/comm_bg_dialog_cancel"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_22" />
        <View
            android:layout_width="@dimen/dp_30"
            android:layout_height="1dp"></View>
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:background="@drawable/comm_bg_dialog_sure"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_22" />

    </LinearLayout>

</LinearLayout>
