<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_voice_bedmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_bedmap_self"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="本人"
                android:textSize="@dimen/sp_28"
                android:textColor="@drawable/textcolor_item_bedmap_selector" />

            <TextView
                android:id="@+id/tv_bedmap_group"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp_28"
                android:text="本组"
                android:textColor="@drawable/textcolor_item_bedmap_selector" />

            <TextView
                android:id="@+id/tv_bedmap_loc"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/sp_28"
                android:textStyle="bold"
                android:text="本科"
                android:textColor="@drawable/textcolor_item_bedmap_selector" />
            <RelativeLayout
                android:id="@+id/tv_go_voicelist"
                android:layout_width="@dimen/dp_0"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_weight="0.4">
                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@drawable/img_nurlink_govoicenote"
                    android:layout_centerInParent="true"></ImageView>
            </RelativeLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#ECF4FC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_color_gray_e">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_bedmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_voice_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center_vertical">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/tv_go_bedmap"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@drawable/img_nurlink_govoicebedlist"
                    android:layout_centerInParent="true"></ImageView>
            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_user"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/black"
                tools:text="护士01"
                ></TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_22"
                    android:text="共"
                    ></TextView>
                <TextView
                    android:id="@+id/note_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_23"
                    tools:text="4"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_22"
                    android:text="条记录"
                    ></TextView>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_add"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_13"
                android:textColor="@color/blue"
                android:background="@drawable/img_note_add"
                ></TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:background="#ECF4FC" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/text_color_gray_e">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
