<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_50"
    android:layout_marginBottom="@dimen/dp_40"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:layout_above="@+id/ll_sure"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_15"
                android:gravity="center"
                android:text="设置"
                android:textSize="@dimen/dp_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/bg_blue_light"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/message"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="输入IP"
                    android:digits="0123456789."
                    android:textColor="@color/black"
                    android:background="@color/bg_blue_light"
                    />
                <TextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="@color/black"
                    />
                <EditText
                    android:id="@+id/message2"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:hint="输入端口号"
                    android:digits="0123456789"
                    android:textColor="@color/black"
                    android:background="@color/bg_blue_light"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/message3"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_height="@dimen/dp_70"
                android:gravity="center"
                android:hint="资源路径"
                android:digits="/AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz"
                android:textColor="@color/black"
                android:background="@color/bg_blue_light"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_dialog"
            android:gravity="center">

            <Button
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="No"
                android:visibility="gone"
                android:textColor="#7D7D7D"
                android:textSize="@dimen/sp_16" />


            <Button
                android:id="@+id/yes"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/bg_rectangle_deepblue"
                android:gravity="center"
                android:singleLine="true"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:textColor="@color/blue"
            android:background="@drawable/nurlink_img_update"
            android:textSize="@dimen/dp_28" />
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:textColor="@color/blue"
            android:background="@drawable/img_dialog_cancle"
            android:textSize="@dimen/dp_28" />
    </RelativeLayout>


</RelativeLayout>