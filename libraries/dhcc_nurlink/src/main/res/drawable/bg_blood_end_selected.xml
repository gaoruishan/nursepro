    <!-- 阴影部分 -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#f5faff"
                android:endColor="#f5faff"/>
            <!-- 设置四个角的角度 -->
            <corners
                android:radius="4dp" />
