<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/sp_10"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:src="@drawable/dhcc_icon_orderexec_selector"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dhcc_bg_oval_green"
                android:paddingBottom="@dimen/dp_1"
                android:paddingEnd="@dimen/dp_8"
                android:paddingStart="@dimen/dp_8"
                android:textColor="@color/white"
                tools:text="皮试" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                tools:text="阿德福韦片T(10mg*14片)" />

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="2018-08-25 08:00" />

                <TextView
                    android:id="@+id/tv_operate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="皮试" />

                <TextView
                    android:id="@+id/tv_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="10mg" />

                <TextView
                    android:id="@+id/tv_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="QD" />

                <TextView
                    android:id="@+id/tv_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="严医生" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/tv_dose1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:textColor="@color/dhcc_ordersearch_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="10mg" />


            </LinearLayout>
            <View
                android:id="@+id/line_oeporderinfo_multiorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_3"
                android:background="@drawable/dhcc_line_dash"
                android:layerType="software" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:text="时间: "
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/sp_16" />


                    <TextVie
                        android:id="@+id/tv_skin_between"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="20分钟"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_12" />



                <TextView
                    android:id="@+id/tv_skin_time_start"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="09:06:57"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/blue_light" />
                <TextView
                    android:id="@+id/tv_skin_time_end"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="19:06:57"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.dhcc.res.infusion.CustomSkinTagView
        android:id="@+id/custom_skin_tag"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>