<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_puncture_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.dhcc.res.infusion.CustomSelectView
            android:id="@+id/csv_select_parts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomSelectView
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/csv_select_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomSpeedView
            android:id="@+id/csv_speed"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <RelativeLayout
            android:id="@+id/rl_way"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.dhcc.res.infusion.CustomSelectView
                android:id="@+id/custom_select_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.dhcc.res.infusion.CustomOnOffView
                android:id="@+id/custom_on_off"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"/>
        </RelativeLayout>

        <com.dhcc.res.infusion.CustomSelectView
            android:id="@+id/csv_select"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#FF62ABFF"
        android:gravity="center"
        android:text="保存"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/sp_16"
    />
</LinearLayout>