<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5FAFF"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:background="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@color/white"
        android:text="设置"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ECECEC"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:layout_margin="@dimen/dp_20"
            android:src="@drawable/icon_nurse"/>
        <TextView
            android:id="@+id/tv_setting_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:gravity="center"
            android:textColor="@color/text_view_text_color"
            android:textStyle="bold"
            android:textSize="@dimen/sp_17"
            tools:text="护士" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20">
            <TextView
                android:id="@+id/tv_setting_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view_text_color"
                android:textSize="@dimen/sp_13"
                android:text="选择科室"
                />
            <View
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_7"
                android:background="@drawable/dhcc_point_circle"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/tv_setting_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_view_text_color"
                android:textSize="@dimen/sp_13"
                android:text="选择窗口"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        >
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_setting_pat_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="患者列表"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/text_view_text_color"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/infusion_setting_arrow">

            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DADADA"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
        />
        <RelativeLayout
            android:id="@+id/rl_setting_choosebeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作统计"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/text_view_text_color"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/infusion_setting_arrow">

            </ImageView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DADADA"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
           />

        <RelativeLayout
            android:id="@+id/rl_setting_chooseway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="提醒方式"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/text_view_text_color"
                />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@drawable/infusion_setting_arrow">

            </ImageView>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_setting_relogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="     退出登录     "
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>
