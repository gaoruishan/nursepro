<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_3"
            android:background="@drawable/dhcc_line_dash"
            android:layerType="software" />
        <LinearLayout
            android:id="@+id/ll_dosing"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">
            <com.noober.background.view.BLTextView
                android:id="@+id/tv_status_dosing"
                android:text="停止"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                app:bl_corners_radius="@dimen/dp_5"
                app:bl_solid_color="@color/blue_dark"
                android:textSize="@dimen/sp_10"
                android:paddingRight="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_3"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_dosing_user"
                tools:text="护士01"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_dosing_time"
                tools:text="护士01"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_audit"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content">
            <com.noober.background.view.BLTextView
                android:id="@+id/tv_status_audit"
                android:text="停止"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                app:bl_corners_radius="@dimen/dp_5"
                app:bl_solid_color="@color/blue_dark"
                android:textSize="@dimen/sp_10"
                android:paddingRight="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_3"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_audit_user"
                tools:text="护士01"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_audit_time"
                tools:text="护士01"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>