<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:orientation="vertical">

    <!--只需引入自定组件, 即可具有布局/业务功能-->
    <com.dhcc.module.infusion.view.CustomSelectLocWindow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <!--扫码-->
    <com.dhcc.res.infusion.CustomScanBloodView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.dhcc.res.infusion.CustomPatView
                android:id="@+id/custom_pat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.dhcc.res.infusion.CustomVitalView
                android:id="@+id/custom_vital"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <com.dhcc.res.infusion.CustomSpeedView
                android:id="@+id/custom_speed"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <com.dhcc.res.infusion.CustomSelectView
                android:id="@+id/custom_select_time"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_height="@dimen/dp_50"/>

            <com.dhcc.res.infusion.CustomSelectView
                android:id="@+id/custom_select_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"/>

            <LinearLayout
                android:id="@+id/ll_measure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_137"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"
                android:background="#FFFFFFFF"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="不良反应"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/sp_15"
                    />
                <EditText
                    android:id="@+id/ed_measure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:padding="@dimen/dp_5"
                    android:hint="请输入内容"
                    android:textSize="@dimen/sp_12"
                    android:gravity="left"
                    android:background="#FFF5FAFF"
                    />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/ll_patrol_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_15">
                <TextView
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_21"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="巡视情况"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/sp_15"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_tour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="#FF62ABFF"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_16"
            />

    </RelativeLayout>

</LinearLayout>