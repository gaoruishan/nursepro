<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#E4F0FF" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="患者信息" />

                    <TextView
                        android:id="@+id/tv_patinfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_33"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="#F5FAFF"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_15"
                        tools:text="07床-刘患者-A型Rh阳性" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血袋信息" />

                    <TextView
                        android:id="@+id/tv_bloodinfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_33"
                        android:layout_marginStart="@dimen/dp_10"
                        android:background="#F5FAFF"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_15"
                        tools:text="悬浮红细胞2.00U-A型Rh阳性" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F5FAFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_12">


                <LinearLayout
                    android:id="@+id/ll_sign"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.noober.background.view.BLTextView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:gravity="center"
                        android:text="签收"
                        app:bl_corners_radius="@dimen/dp_18"
                        app:bl_unSelected_solid_color="#FFF5FAFF"
                        app:bl_selected_solid_color="#FF4C95EF"
                        app:bl_selected_textColor="#FFFFFF"
                        app:bl_unSelected_textColor="#AAAAAA"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_signdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="2015-10-20" />

                    <TextView
                        android:id="@+id/tv_signtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="8:00:00" />

                    <TextView
                        android:id="@+id/tv_signnurse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="严护士" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_trans"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.noober.background.view.BLTextView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:gravity="center"
                        android:text="输注"
                        app:bl_corners_radius="@dimen/dp_18"
                        app:bl_unSelected_solid_color="#FFF5FAFF"
                        app:bl_selected_solid_color="#FFF5A623"
                        app:bl_selected_textColor="#FFFFFF"
                        app:bl_unSelected_textColor="#AAAAAA"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_transdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="2015-10-20" />

                    <TextView
                        android:id="@+id/tv_transtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="8:00:00" />

                    <TextView
                        android:id="@+id/tv_transnurse1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="严护士" />

                    <TextView
                        android:id="@+id/tv_transnurse2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="严护士" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_transend"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.noober.background.view.BLTextView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:gravity="center"
                        app:bl_corners_radius="@dimen/dp_18"
                        app:bl_unSelected_solid_color="#FFF5FAFF"
                        app:bl_selected_solid_color="#FFB8DA64"
                        android:text="结束"
                        app:bl_selected_textColor="#FFFFFF"
                        app:bl_unSelected_textColor="#AAAAAA"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_transenddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="2015-10-20" />

                    <TextView
                        android:id="@+id/tv_transendtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="8:00:00" />

                    <TextView
                        android:id="@+id/tv_transendnurse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="严护士" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_transenderror"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <com.noober.background.view.BLTextView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:gravity="center"
                        app:bl_corners_radius="@dimen/dp_18"
                        app:bl_unSelected_solid_color="#FFF5FAFF"
                        app:bl_selected_solid_color="#FFFF6262"
                        android:text="终止"
                        app:bl_selected_textColor="#FFFFFF"
                        app:bl_unSelected_textColor="#AAAAAA"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_transenderrordate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="2015-10-20" />

                    <TextView
                        android:id="@+id/tv_transenderrortime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="8:00:00" />

                    <TextView
                        android:id="@+id/tv_transenderrornurse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="严护士" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_recycling"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:gravity="center"
                        android:text="回收"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_recyclingdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="2015-10-20" />

                    <TextView
                        android:id="@+id/tv_recyclingtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="8:00:00" />

                    <TextView
                        android:id="@+id/tv_recyclingnurse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:textColor="#4A4A4A"
                        android:textSize="@dimen/sp_13"
                        tools:text="严护士" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_transenderror_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_33"
                android:background="#FEF5F5"
                android:gravity="center_vertical"
                android:textColor="#4A4A4A"
                android:paddingStart="@dimen/dp_20"
                tools:text="终止原因：过敏"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F5FAFF" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_tourempty"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:src="@drawable/dhcc_empty"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#9B9B9B"
                    android:text="暂无巡视"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>