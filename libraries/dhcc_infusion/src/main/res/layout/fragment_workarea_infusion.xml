<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_157">
        <LinearLayout
            android:background="@drawable/dhcc_picture_workarea"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:onClick="testServer"
                android:layout_width="@dimen/dp_290"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/dhcc_back_tv_workarea"
                android:text="有时是治愈；常常是帮助；总是去安慰。"
                android:textSize="@dimen/sp_14"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:gravity="center"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_home_pic"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dhcc_img_blueline"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recy_workarea"
       />
</LinearLayout>
