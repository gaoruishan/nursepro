<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/screen_bg_color"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue_light"/>

        <com.dhcc.module.infusion.view.CustomOrdStateView
            android:id="@+id/cosv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="开医嘱人"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/tv_name_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="严医生"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_15"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tv_title1"
                android:background="#ECECEC"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="开医嘱时间"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/tv_name_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2019-01-20  09:26"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_15"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tv_title2"
                android:background="#ECECEC"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="用法"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/tv_name_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="静脉滴注"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_15"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/tv_title3"
                android:background="#ECECEC"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFFFF"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="频率"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/tv_name_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2次/天"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_15"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFFFFFFF"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="医嘱"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_15"
            />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ord_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_notes_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFFFFFFF"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:text="医生说明"
                android:textColor="#FF4A4A4A"
                android:textSize="@dimen/sp_15"
            />
            <TextView
                android:id="@+id/tv_notes_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明说明说明说明说明说明说明说明说明说明说明说明说明说明。"
                android:textColor="#FF000000"
                android:textSize="@dimen/sp_15"
            />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_step_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!--巡视情况-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_15">
            <TextView
                android:layout_width="65dp"
                android:layout_height="21dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="巡视情况"
                android:textColor="#FF4A4A4A"
                android:textSize="15sp"
            />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_patrol_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="@dimen/dp_10"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
