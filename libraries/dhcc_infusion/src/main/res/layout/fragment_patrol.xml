<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color"
    android:orientation="vertical">

    <!--扫码-->
    <com.dhcc.module.infusion.view.CustomScanView
        android:id="@+id/csv_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.dhcc.module.infusion.view.CustomPatView
                android:id="@+id/cpv_pat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.dhcc.module.infusion.view.CustomSpeedView
                android:id="@+id/csv_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical"
            />

            <com.dhcc.module.infusion.view.CustomSelectView
                android:id="@+id/csv_select_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"/>


            <com.dhcc.module.infusion.view.CustomSelectView
                android:id="@+id/csv_select_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"/>

            <com.dhcc.module.infusion.view.CustomSelectView
                android:id="@+id/csv_select_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/ll_measure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_137"
                android:layout_marginTop="@dimen/dp_15"
                android:visibility="gone"
                android:background="#FFFFFFFF"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="处理措施"
                    android:textColor="#FF4A4A4A"
                    android:textSize="@dimen/sp_15"
                />
                <EditText
                    android:id="@+id/ed_measure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:padding="@dimen/dp_5"
                    android:hint="请输入内容"
                    android:textSize="@dimen/sp_12"
                    android:gravity="left"
                    android:background="#FFF5FAFF"
                />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ord_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"/>

            <LinearLayout
                android:id="@+id/ll_patrol_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_15">
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="巡视情况"
                    android:textColor="#FF4A4A4A"
                    android:textSize="15sp"
                />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_patrol_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>
            </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="@dimen/dp_15"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#FF62ABFF"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/sp_16"
    />
</LinearLayout>