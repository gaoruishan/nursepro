<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_item_bloodop_opstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_oval_green"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingEnd="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_2"
                    android:textColor="@color/white"
                    tools:text="已回收" />


            <TextView
                android:id="@+id/tv_item_bloodop_bagno"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_2"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_2"
                tools:text="00000000381" />

            <com.dhcc.res.infusion.CustomSkinTagView
                android:id="@+id/custom_tag"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_item_bloodop_productdesc"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/sp_15"
                tools:text="悬浮红细胞2.00U" />

            <TextView
                android:id="@+id/tv_item_bloodop_bloodtype"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textColor="#5c5c5c"
                android:textSize="@dimen/sp_15"
                tools:text="A型Rh阳性" />
            <View
                android:visibility="gone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="2018-08-25 08:00" />

            <TextView
                android:id="@+id/tv_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="皮试" />

            <TextView
                android:id="@+id/tv_dose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="10mg" />

            <TextView
                android:id="@+id/tv_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_6"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="QD" />

            <TextView
                android:id="@+id/tv_creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dhcc_ordersearch_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="严医生" />


        </LinearLayout>
        <com.dhcc.res.infusion.CustomStatusView
            android:id="@+id/custom_check_rec"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomStatusView
            android:id="@+id/custom_check_start"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"/>
        <com.dhcc.res.infusion.CustomStatusView
            android:id="@+id/custom_check_finish"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line_item_bloodop_endreason"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/line_dash"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_item_bloodop_endreason"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#ff6262"
            tools:text="终止原因：过敏" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f0f0f0"/>

</LinearLayout>
