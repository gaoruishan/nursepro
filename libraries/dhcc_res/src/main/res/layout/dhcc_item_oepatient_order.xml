<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:id="@+id/view_oepat_top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_oepat_orderinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/ll_oepat_orderselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dhcc_icon_orderexec_selector"
                />
        </LinearLayout>


    </FrameLayout>

    <View
        android:id="@+id/line_oepat_orderinfo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dhcc_line_dash"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layerType="software" />
    <View
        android:id="@+id/view_oepat_bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"/>
</LinearLayout>