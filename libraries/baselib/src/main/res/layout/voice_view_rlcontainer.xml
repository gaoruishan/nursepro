<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_title_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_single_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_title_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingBottom="@dimen/dp_3"
                            android:textColor="@color/blue"/>
                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="0.1dp"
                            android:layout_weight="1"/>
                        <LinearLayout
                            android:id="@+id/ll_title_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_containner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </RelativeLayout>

        </LinearLayout>
        <EditText
            android:visibility="gone"
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:maxHeight="@dimen/dp_250"
            android:textColor="@color/red"
            android:background="@color/white"
            android:focusable="false"
            android:layout_marginRight="@dimen/dp_60"
            ></EditText>
        <Button
            android:visibility="gone"
            android:layout_width="59dp"
            android:layout_height="49dp"
            android:id="@+id/btn_mov"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/voice_button_selector"
            ></Button>

</RelativeLayout>