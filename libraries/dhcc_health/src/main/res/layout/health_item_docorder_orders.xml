<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_order_priority"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_18"
            android:layout_margin="@dimen/dp_12"
            android:background="@drawable/bg_priority_long"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:text="长期" />
        <TextView
            android:id="@+id/tv_item_order_stop"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/bg_priority_stop"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="停止" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_item_order_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/view_docorders_namedev"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_item_order_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间" />

        <TextView
            android:id="@+id/tv_item_order_ordphcin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="用法" />

        <TextView
            android:id="@+id/tv_item_order_ordunit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="频次" />

        <TextView
            android:id="@+id/tv_item_order_orddoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="医生" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item_stoporder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_item_order_stopdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-10-10" />

        <TextView
            android:id="@+id/tv_item_order_stoptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="15:00" />

        <TextView
            android:id="@+id/tv_item_order_stopdoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="结束医生" />

    </LinearLayout>

    <View
        android:id="@+id/line_ospat_orderinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software" />
</LinearLayout>