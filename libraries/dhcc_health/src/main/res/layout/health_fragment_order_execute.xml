<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.dhcc.res.infusion.CustomPatView
            android:id="@+id/custom_pat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomDateTimeView
            android:visibility="gone"
            android:id="@+id/custom_date"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/bg_blue_light"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/blue_light"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sel_num"
                android:layout_width="@dimen/dp_130"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:text="已选择0条医嘱"></TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>
            <TextView
                android:id="@+id/tv_execu_sure"
                android:layout_width="@dimen/dp_140"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="执行"
                android:gravity="center"
                android:textSize="18sp"></TextView>
        </LinearLayout>

    </LinearLayout>
    <com.dhcc.res.infusion.CustomScanView
        android:id="@+id/custom_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>