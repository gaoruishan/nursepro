<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_date"
        android:orientation="vertical">

        <com.dhcc.res.nurse.CustomEmptyLayout
            android:id="@+id/custom_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <HorizontalScrollView
            android:id="@+id/hor_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.dhcc.res.nurse.CustomLinearLayout
                    android:id="@+id/custom_linear"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:descendantFocusability="blocksDescendants" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_vital_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:descendantFocusability="blocksDescendants" />
            </LinearLayout>

        </HorizontalScrollView>



    </LinearLayout>

    <com.dhcc.res.infusion.CustomDateTimeView
        android:id="@+id/custom_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" />

    <com.dhcc.res.infusion.CustomScanView
        android:id="@+id/custom_scan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
   />


</RelativeLayout>