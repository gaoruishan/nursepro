<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    android:orientation="horizontal"
    >
    <com.dhcc.res.infusion.CustomSheetListView
        android:id="@+id/custom_sheet_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <com.dhcc.res.infusion.CustomTagSelectLayout
            android:id="@+id/cts_priority_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomTagSelectLayout
            android:id="@+id/cts_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.dhcc.res.infusion.CustomTagSelectLayout
            android:id="@+id/cts_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/blue_light">

        </View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_order_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>