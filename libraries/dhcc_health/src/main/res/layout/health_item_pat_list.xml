<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@color/blue_light"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_pat_select"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_login_remember_selector"
            android:layout_margin="@dimen/dp_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_pat_admdr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                tools:text="123124"
                ></TextView>

            <TextView
                android:id="@+id/tv_pat_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_13"
                tools:text="01-张三"
                ></TextView>

        </LinearLayout>
    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="0.2dp"
       android:background="@color/blue"
       android:layout_marginLeft="@dimen/dp_3"
       android:layout_marginRight="@dimen/dp_3"></View>
</LinearLayout>
    

