<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_lab_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            android:visibility="gone"
            tools:text="1000003770 "
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/sp_16" />

        <com.noober.background.view.BLTextView
            android:id="@+id/bl_tv_status"
            android:text="需处理临嘱"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_patinfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="tom"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_3"
            ></TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"></View>

        <LinearLayout
            android:id="@+id/ll_exec_orderselect"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_3">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:background="@drawable/icon_orderexec_selector"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:textColor="@color/dhcc_ordersearch_text_color"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        tools:text="阿德福韦片T(10mg*14片)" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/health_item_ord_child"/>

    <LinearLayout
        android:id="@+id/ll_lab"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content">
        <com.noober.background.view.BLTextView
            android:id="@+id/tv_status_lab"
            android:text="停止"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            app:bl_corners_radius="@dimen/dp_5"
            app:bl_solid_color="@color/blue_dark"
            android:textSize="@dimen/sp_10"
            android:paddingRight="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_lab_user"
            tools:text="护士01"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/dhcc_ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_lab_time"
            tools:text="护士01"
            android:layout_marginEnd="@dimen/dp_6"
            android:textColor="@color/dhcc_ordersearch_text_color"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/line_oeporderinfo_multiorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/dhcc_line_dash"
        android:layerType="software" />

</LinearLayout>