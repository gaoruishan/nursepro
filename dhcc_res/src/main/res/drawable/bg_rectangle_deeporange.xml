    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#FF1493"
                android:endColor="#FF1493"/>
            <!-- 设置四个角的角度 -->
            <corners
                android:radius="4dp" />
